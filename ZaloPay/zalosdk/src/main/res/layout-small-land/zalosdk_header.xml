<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/payment_header_landscape_width"
    android:layout_height="match_parent"
    android:background="@drawable/zalosdk_border_bottom_left" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/app_avatar"
            android:layout_width="@dimen/payment_app_icon_size"
            android:layout_height="@dimen/payment_app_icon_size"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <TextView
            android:id="@+id/zalosdk_bill_info_ctl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/app_avatar"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#000"
            android:textSize="@dimen/payment_info_row1_text_size_land" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/zalosdk_bill_info_ctl"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadow" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zalosdk_bill_info_ctl"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="@dimen/payment_info_row2_text_size" />

        <TextView
            android:id="@+id/payment_method_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name"
            android:singleLine="true"
            android:textColor="#FB5E10"
            android:textSize="@dimen/payment_info_row2_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/payment_method_amount"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadow" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/payment_method_amount"
            android:layout_marginTop="20dp"
            android:fillViewport="true"
            android:scrollbars="none" >

            <TextView
                android:id="@+id/payment_method_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="false"
                android:maxLength="50"
                android:textColor="#333333"
                android:textSize="@dimen/payment_info_row2_text_size"
                android:textStyle="italic" />
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>