<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/zalosdk_round_corner" >

        <include
            android:id="@+id/payment_method_container"
            layout="@layout/payment_method_container" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/payment_method_container"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/payment_group_button_submit_height"
            android:fillViewport="true"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/view_root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:padding="7dip" >

                    <EditText
                        android:id="@+id/redeemCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/zalosdk_border06"
                        android:hint="Zalo code"
                        android:imeOptions="actionGo"
                        android:maxLength="20"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/sdk_form_input_size" />

                    <TextView
                        android:id="@+id/payment_method_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/redeemCode"
                        android:layout_marginTop="10dp"
                        android:maxLength="50"
                        android:maxLines="2"
                        android:singleLine="false"
                    	android:ellipsize="end"
                        android:paddingLeft="@dimen/payment_displayInfo_padding"
                        android:paddingRight="@dimen/payment_displayInfo_padding"
                        android:textColor="#333333"
                        android:textStyle="italic"
                        android:textSize="15dp" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <include
            android:layout_width="match_parent"
            android:layout_height="@dimen/payment_group_button_submit_height"
            android:layout_alignParentBottom="true"
            layout="@layout/zalosdk_toggle_submit_module" />
    </RelativeLayout>

</RelativeLayout>