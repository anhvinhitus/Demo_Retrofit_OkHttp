<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zalosdk_round_corner" >

        <include
            android:id="@+id/payment_method_container"
            layout="@layout/payment_method_container" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/payment_method_container"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/payment_group_button_submit_height"
            android:fillViewport="true"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/wraper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RelativeLayout
                        android:id="@+id/view_root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/log_in_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="7dp"
                            android:visibility="invisible" >

                            <TextView
                                android:id="@+id/login_acc_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="Đăng nhập bằng tài khoản Zing để thanh toán"
                                android:textColor="#292f33"
                                android:textSize="15sp" 
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/zingme_acc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/zalosdk_border06"
                                android:hint="Tên tài khoản Zing Xu"
                                android:imeOptions="actionNext|flagNoExtractUi"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textSize="@dimen/sdk_form_input_size" />

                            <EditText
                                android:id="@+id/zingme_pass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/zalosdk_border06"
                                android:hint="Mật khẩu"
                                android:imeOptions="actionGo|flagNoExtractUi"
                                android:inputType="textPassword"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textSize="@dimen/sdk_form_input_size" />

                            <TextView
                                android:id="@+id/payment_method_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:maxLength="50"
                                android:maxLines="2"
                                android:singleLine="false"
                    			android:ellipsize="end"
                                android:paddingLeft="@dimen/payment_displayInfo_padding"
                                android:paddingRight="@dimen/payment_displayInfo_padding"
                                android:textColor="#333333"
                                android:textSize="15dp"
                                android:textStyle="italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/charge_coin_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="7dp"
                            android:visibility="gone" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/hello_acc"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:textColor="#292f33"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/log_out"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(thay đổi tài khoản)"
                                    android:textColor="#4BA4E1"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/coin_amount_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Số Zing Xu hiện có: "
                                    android:textColor="#292f33"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/coin_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="16dp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/zingxu_icon" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/title_grey" />

                            <EditText
                                android:id="@+id/input_coin_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/zalosdk_border06"
                                android:hint="Số Zing Xu (tối thiểu là 50)"
                                android:imeOptions="actionGo|flagNoExtractUi"
                                android:inputType="number"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="#292f33"
                                android:textSize="@dimen/sdk_form_input_size" />

                            <TextView
                                android:id="@+id/amount_convert"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="1 Zing Xu = 100 VNĐ"
                                android:textColor="#292f33"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <include
            android:id="@+id/submit_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/payment_group_button_submit_height"
            android:layout_alignParentBottom="true"
            layout="@layout/zalosdk_toggle_submit_module"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>