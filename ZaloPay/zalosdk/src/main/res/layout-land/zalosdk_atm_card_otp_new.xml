<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zalosdk_background_rectangle_corner_blue_background"
        android:orientation="vertical" >

        <include layout="@layout/payment_method_container" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/zalosdk_border_bottom_right" >

            <include
                android:id="@id/zalosdk_header"
                layout="@layout/zalosdk_header" />

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/payment_group_button_submit_height"
                android:layout_toRightOf="@id/zalosdk_header"
                android:fillViewport="true"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/view_root"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="7dip" >

                        <EditText
                            android:id="@+id/zalosdk_otp_ctl"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/zalosdk_otp_note_ctl"
                            android:layout_marginTop="3dip"
                            android:background="@drawable/zalosdk_border06"
                            android:hint="@string/zalosdk_otp"
                            android:imeOptions="actionNext|flagNoExtractUi"
                            android:inputType="textNoSuggestions"
                            android:maxLength="12"
                            android:padding="10dip"
                            android:singleLine="true"
                            android:textColor="#292f33"
                            android:textSize="@dimen/sdk_form_input_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/zalosdk_otp_ctl"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/zalosdk_captchar_ctl"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/zalosdk_border06"
                                android:hint="@string/zalosdk_captchar_inputing"
                                android:imeOptions="actionGo|flagNoExtractUi"
                                android:inputType="textNoSuggestions"
                                android:maxLength="12"
                                android:padding="10dip"
                                android:singleLine="true"
                                android:textColor="#292f33"
                                android:textSize="@dimen/sdk_form_input_size" />

                            <ImageView
                                android:id="@+id/zalosdk_captchar_img_ctl"
                                android:layout_width="0dp"
                                android:layout_height="35dip"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:contentDescription="@string/zalosdk_app_name"
                                android:scaleType="fitCenter" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>

            <include
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/zalosdk_header"
                layout="@layout/zalosdk_button_submit_module" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>