<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="155dp"
    android:layout_height="match_parent"
    android:background="@drawable/zalosdk_border_bottom_left" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <RelativeLayout
            android:id="@+id/app_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/app_avatar"
                android:layout_width="@dimen/payment_app_icon_size"
                android:layout_height="@dimen/payment_app_icon_size"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/zalosdk_bill_info_ctl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/app_avatar"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#000"
                android:textSize="@dimen/payment_info_row1_text_size_land" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/app_info_container"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadow" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_info_container"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="@dimen/payment_info_row2_text_size" />

        <TextView
            android:id="@+id/payment_method_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name"
            android:singleLine="true"
            android:textColor="#FB5E10"
            android:textSize="@dimen/payment_info_row2_text_size" />

        <View
            android:id="@+id/divider_payment_description"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/payment_method_amount"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadow" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/payment_method_amount"
            android:layout_marginTop="20dp"
            android:fillViewport="true"
            android:scrollbars="none" >

            <TextView
                android:id="@+id/payment_method_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="false"
                android:textColor="#333333"
                android:textSize="@dimen/payment_info_row2_text_size"
                android:textStyle="italic" />
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>