<resources>

    <style name="RecyclerView">
        <item name="android:clipChildren">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:smoothScrollbar">true</item>
    </style>

    <style name="AndroidImageSlider_Corner_Oval_Orange">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/indicator_corner_bg</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="shape">oval</item>
        <item name="padding_left">3dp</item>
        <item name="padding_right">3dp</item>
        <item name="padding_top">4dp</item>
        <item name="padding_bottom">4dp</item>

        <item name="selected_color">#f60</item>
        <item name="unselected_color">#ffffff</item>
        <item name="selected_width">6dp</item>
        <item name="selected_height">6dp</item>
        <item name="unselected_width">6dp</item>
        <item name="unselected_height">6dp</item>
    </style>

    <style name="AndroidImageSlider_Attractive_Rect_Blue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="shape">rect</item>
        <item name="padding_left">3dp</item>
        <item name="padding_right">3dp</item>
        <item name="padding_top">4dp</item>
        <item name="padding_bottom">4dp</item>

        <item name="selected_color">#30CCE5</item>
        <item name="unselected_color">#333333</item>
        <item name="selected_width">13dp</item>
        <item name="selected_height">4dp</item>
        <item name="unselected_width">13dp</item>
        <item name="unselected_height">4dp</item>
    </style>

    <style name="AndroidImageSlider_Magnifier_Oval_Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="shape">oval</item>
        <item name="padding_left">3dp</item>
        <item name="padding_right">3dp</item>
        <item name="padding_top">4dp</item>
        <item name="padding_bottom">4dp</item>

        <item name="selected_color">#333333</item>
        <item name="unselected_color">#33000000</item>
        <item name="selected_width">8dp</item>
        <item name="selected_height">8dp</item>
        <item name="unselected_width">6dp</item>
        <item name="unselected_height">6dp</item>
    </style>

    <style name="TextViewEmpty" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/c.text.item.not.found</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert"></style>

    <style name="RecipientEditTextView" parent="Base.V12.Widget.AppCompat.AutoCompleteTextView">
        <item name="android:inputType">textEmailAddress|textMultiLine</item>
        <item name="android:imeOptions">actionNext|flagNoFullscreen</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:dropDownVerticalOffset">-6dip</item>
        <item name="android:dropDownHorizontalOffset">-16dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra</item>
        <!--<item name="android:textAlignment" tools:ignore="NewApi">viewStart</item>-->
        <!--<item name="android:textDirection" tools:ignore="NewApi">locale</item>-->
    </style>

    <style name="ChipTitleStyle">
        <item name="android:paddingLeft">@dimen/chip_title_padding_start</item>
    </style>

    <style name="ChipSubtitleStyle">
        <item name="android:paddingLeft">@dimen/chip_subtitle_padding_start</item>
    </style>

    <style name="ChipIconStyle">
        <item name="android:layout_marginRight">@dimen/chip_icon_margin_start</item>
    </style>


    <style name="CircularProgressBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="stroke_width">5dp</item>
        <item name="progress" format="float">0.1</item>
        <item name="progress_color">#ffff4444</item>
        <item name="progress_background_color">#ffffffff</item>
        <item name="marker_visible">true</item>
        <item name="thumb_visible">true</item>
    </style>

    <style name="CircularProgressBarLight">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="stroke_width">5dp</item>
        <item name="progress" format="float">0.1</item>
        <item name="progress_color">#ffff4444</item>
        <item name="progress_background_color">#aaa</item>
        <item name="marker_visible">true</item>
        <item name="thumb_visible">true</item>
    </style>

    <!-- TEXTVIEW-->
    <style name="TextView.Default" parent="android:Widget.TextView">
        <item name="android:textColor">@color/c_text_black</item>
        <item name="android:textColorHint">@color/c_text_hint</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="TextView.Title" parent="TextView.Default">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/c_text_black</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="TextView.Title.Grey">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/c.text.title.grey</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="TextView.Content" parent="TextView.Default">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/c_text_black</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="TextView.SubTitle" parent="android:Widget.TextView">
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@color/c_text_grey</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="TextView.Error" parent="android:Widget.TextView">
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <!--BUTTON-->
    <style name="Button.Default" parent="android:Widget.Button">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_default_style_selector</item>
        <item name="android:minWidth">72dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:typeface">serif</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="Button.Default.Borderless">
        <item name="android:background">@drawable/default_selector</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:ems">10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/c_text_black</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="EditText.Default">
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText.Passport">
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText.Passport.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="ClearEditText.Default" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_edt_default_style</item>
        <item name="android:paddingBottom">@dimen/spacing.medium.s</item>
        <item name="android:paddingRight">@dimen/spacing.medium</item>
        <item name="android:paddingTop">@dimen/spacing.medium.t</item>
    </style>


    <style name="dialog_blue_button" parent="Widget.AppCompat.ActionButton">
        <item name="android:textSize">@dimen/zpw_text_size_big_x</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="alert_dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/dialog_sweet_shadow</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.2</item>
    </style>

    <style name="alert_dialog_transparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.01</item>
    </style>

    <style name="ZaloPayEditText">
        <item name="zlp_autoValidate">false</item>
        <item name="zlp_checkCharactersCountAtBeginning">false</item>
        <item name="zlp_clearButton">true</item>
        <item name="zlp_clearButtonSize">15sp</item>
        <item name="zlp_floatingLabel">none</item>
        <item name="zlp_paddingLeftLine">0dp</item>
        <item name="zlp_textColorHint">@color/hint</item>
        <item name="zlp_hideUnderline">true</item>
        <item name="android:maxLines">1</item>
        <item name="zlp_validateOnFocusLost">true</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">13sp</item>
        <item name="zlp_textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CoffeeDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.1</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/silver</item>
        <item name="colorControlActivated">@color/green_lv_3</item>
    </style>
</resources>
