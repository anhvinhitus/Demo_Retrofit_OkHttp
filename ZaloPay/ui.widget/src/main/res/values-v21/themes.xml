<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="selector">@drawable/default_selector</item>
        <item name="divider">@color/divider</item>
        <item name="android:listViewStyle">@style/ListView</item>
        <item name="background.default">@color/bg_gray</item>
        <item name="separate">@color/separate</item>
        <item name="separate.height">@dimen/separate</item>
        <item name="android:colorAccent">?attr/colorAccent</item>
    </style>

    <style name="BaseTheme.NoActionBar" parent="BaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorAccent">?attr/colorAccent</item>
    </style>

</resources>