<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/zpw_padding_10"
            android:paddingTop="@dimen/zpw_padding_20"
            android:src="@drawable/ic_no_connection" />

        <TextView
            android:id="@+id/title_nointerne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/zpw_padding_8"
            android:paddingTop="@dimen/zpw_padding_8"
            android:text="@string/zingpaysdk_alert_title_nointernet"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_color_bold"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_content_nointernet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:lineSpacingExtra="@dimen/pading_top_min"
            android:paddingBottom="@dimen/zpw_padding_10"
            android:paddingTop="@dimen/zpw_padding_10"
            android:textColor="@color/text_color_bold"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>