<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gateway_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zpsdk_background_rectangle_corner_blue_background"
        android:orientation="vertical" >

        <include layout="@layout/zpsdk_payment_method_container" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <include
                android:id="@+id/zpsdk_header"
                layout="@layout/zpsdk_header" />

            <LinearLayout
                android:id="@+id/payment_maintenance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/zpsdk_header"
                android:background="@drawable/zpsdk_border_bottom_right"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/maintance_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#292f33"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/sv_list_payment"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@id/zpsdk_header"
                android:background="@drawable/zpsdk_border_bottom_right"
                android:scrollbars="none" >

                <include
                    android:id="@+id/list_payment"
                    layout="@layout/zpsdk_pmc_group_container" />
            </ScrollView>

            <ProgressBar
                android:id="@+id/progress_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="30dp"
                android:minHeight="50dp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>