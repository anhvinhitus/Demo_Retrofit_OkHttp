<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zpsdk_background_rectangle_corner_blue_background"
        android:orientation="vertical" >

        <include layout="@layout/zpsdk_payment_method_container" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/zpsdk_border_bottom_right" >

            <include
                android:id="@+id/zpsdk_header"
                layout="@layout/zpsdk_header" />

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/payment_group_button_submit_height"
                android:layout_toRightOf="@id/zpsdk_header"
                android:fillViewport="true"
                android:scrollbars="none" >

                <include
                    android:id="@+id/view_root"
                    layout="@layout/zpsdk_atm_container" />
            </ScrollView>

            <include
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/zpsdk_header"
                layout="@layout/zpsdk_submit" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/popup_atm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:background="#fff"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="Lựa chọn ngân hàng"
                android:textColor="#23A5C9"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9" />

            <ScrollView
                android:id="@+id/atm_listsv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F3F3F3"
                android:fadingEdgeLength="50dp"
                android:fillViewport="true"
                android:scrollbars="none" >

                <vn.zing.pay.zmpsdk.view.custom.VPaymentChannelGroup
                    android:id="@+id/payment_channel_adapter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="10dp" />
            </ScrollView>

            <TextView
                android:id="@+id/atm_select_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/zpsdk_border07"
                android:gravity="center"
                android:padding="10dp"
                android:text="Đồng ý"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>