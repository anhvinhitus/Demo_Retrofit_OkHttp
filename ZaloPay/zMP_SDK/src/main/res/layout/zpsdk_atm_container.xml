<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="7dp" >

    <vn.zing.pay.zmpsdk.view.custom.VPaymentEditText
        android:id="@+id/chargeAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/zpsdk_border06"
        android:hint="Nhập số tiền"
        android:imeOptions="actionNext|flagNoExtractUi"
        android:inputType="number"
        android:maxLength="20"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="@dimen/sdk_form_input_size" />

    <RelativeLayout
        android:id="@+id/autofill_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/autofill_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/zpsdk_autofill_top_left"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/payment_save_card_label_width"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="Mã thẻ"
                    android:textColor="#292f33"
                    android:textSize="@dimen/payment_save_card_text_size"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#d3d7e4" />

                <TextView
                    android:id="@+id/card_serial_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#292f33"
                    android:textSize="@dimen/payment_save_card_text_size" />

                <View
                    android:id="@+id/card_date_info_seperator"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="#d3d7e4"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/card_date_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#292f33"
                    android:textSize="@dimen/payment_save_card_text_size"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d3d7e4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/payment_save_card_label_width"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="Tên chủ thẻ"
                    android:textColor="#292f33"
                    android:textSize="@dimen/payment_save_card_text_size"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#d3d7e4" />

                <TextView
                    android:id="@+id/card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#292f33"
                    android:textSize="@dimen/payment_save_card_text_size" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/edit_card_manual"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/autofill_info"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:text="Thay đổi"
            android:textColor="#00A4E0"
            android:textSize="@dimen/payment_save_card_text_size" />

        <EditText
            android:id="@+id/fill_4_last_digit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_card_manual"
            android:layout_marginTop="5dp"
            android:background="@drawable/zpsdk_border06"
            android:hint="4 số cuối mã thẻ"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:inputType="number"
            android:maxLength="4"
            android:nextFocusDown="@+id/fill_4_last_digit"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#292f33"
            android:textSize="@dimen/sdk_form_input_size" />

        <TextView
            android:id="@+id/payment_method_description_save_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_password"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLength="50"
            android:maxLines="2"
            android:paddingLeft="@dimen/payment_displayInfo_padding"
            android:paddingRight="@dimen/payment_displayInfo_padding"
            android:singleLine="false"
            android:textColor="#333333"
            android:textSize="15dp"
            android:textStyle="italic" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/normal_form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/cardNumber_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:visibility="visible" >

            <vn.zing.pay.zmpsdk.view.custom.VPaymentEditText
                android:id="@+id/cardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/zpsdk_border06"
                android:hint="Mã thẻ"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="number"
                android:maxLength="23"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="@dimen/sdk_form_input_size" />

            <ImageButton
                android:id="@+id/take_photo"
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="11dp"
                android:background="@null"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/i_capture"
                android:visibility="gone" />
        </RelativeLayout>

        <EditText
            android:id="@+id/cardHolderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/zpsdk_border06"
            android:hint="Tên chủ thẻ"
            android:imeOptions="actionNext|flagNoExtractUi"
            android:inputType="textCapCharacters"
            android:maxLength="50"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="@dimen/sdk_form_input_size" />

        <RelativeLayout
            android:id="@+id/date_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="visible" >

            <vn.zing.pay.zmpsdk.view.custom.VPaymentEditText
                android:id="@+id/zpsdk_year_ctl"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:background="@drawable/zpsdk_border06"
                android:ellipsize="start"
                android:gravity="center_horizontal"
                android:hint="Năm"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:inputType="number"
                android:maxLength="2"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="@dimen/sdk_form_input_size" />

            <vn.zing.pay.zmpsdk.view.custom.VPaymentEditText
                android:id="@+id/zpsdk_month_ctl"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/zpsdk_year_ctl"
                android:background="@drawable/zpsdk_border06"
                android:ellipsize="start"
                android:gravity="center_horizontal"
                android:hint="Tháng"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="number"
                android:maxLength="2"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="@dimen/sdk_form_input_size" />

            <TextView
                android:id="@+id/zpsdk_card_date_lb_ctl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/zpsdk_month_ctl"
                android:textColor="#292f33" />
        </RelativeLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/zpsdk_card_password_ctl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/zpsdk_border06"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:inputType="textPassword"
        android:maxLength="50"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="@dimen/sdk_form_input_size"
        android:visibility="gone" />

    <EditText
        android:id="@+id/zpsdk_acc_name_ctl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/zpsdk_border06"
        android:imeOptions="actionNext|flagNoExtractUi"
        android:inputType="textCapCharacters"
        android:maxLength="20"
        android:padding="10dip"
        android:singleLine="true"
        android:textColor="#292f33"
        android:textSize="@dimen/sdk_form_input_size"
        android:visibility="gone" />

    <EditText
        android:id="@+id/zpsdk_acc_password_ctl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/zpsdk_border06"
        android:hint="@string/zingpaysdk_card_password_ex"
        android:imeOptions="actionNext|flagNoExtractUi"
        android:inputType="textPassword"
        android:maxLength="20"
        android:padding="10dip"
        android:singleLine="true"
        android:textColor="#292f33"
        android:textSize="@dimen/sdk_form_input_size"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/zpsdk_acc_list_ctl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dip"
        android:textColor="#292f33"
        android:textSize="@dimen/sdk_form_input_size"
        android:visibility="gone" />

    <EditText
        android:id="@+id/zpsdk_otp_ctl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/zpsdk_border06"
        android:hint="@string/zingpaysdk_otp"
        android:imeOptions="actionNext|flagNoExtractUi"
        android:inputType="textNoSuggestions"
        android:maxLength="12"
        android:padding="10dip"
        android:singleLine="true"
        android:textColor="#292f33"
        android:textSize="@dimen/sdk_form_input_size"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/captcha_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <EditText
            android:id="@+id/zpsdk_captchar_ctl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/zpsdk_border06"
            android:hint="@string/zingpaysdk_captchar_inputing"
            android:imeOptions="actionGo|flagNoExtractUi"
            android:inputType="textNoSuggestions"
            android:maxLength="12"
            android:padding="10dip"
            android:singleLine="true"
            android:textColor="#292f33"
            android:textSize="@dimen/sdk_form_input_size" />

        <ImageView
            android:id="@+id/zpsdk_captchar_img_ctl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:contentDescription="@string/zingpaysdk_app_name"
            android:scaleType="fitCenter" />

        <FrameLayout
            android:id="@+id/zpsdk_captchar_wv_frame"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:visibility="gone" >

            <WebView
                android:id="@+id/zpsdk_captchar_wv_ctl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/zingpaysdk_app_name"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scrollbars="none" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zpsdk_promotion_description_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/payment_displayInfo_padding"
        android:paddingRight="@dimen/payment_displayInfo_padding"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="Giảm "
            android:textColor="#333333"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/zpsdk_promotion_description_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="3%"
            android:textColor="#ed2024"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text=", bạn chỉ trả "
            android:textColor="#333333"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/zpsdk_promotion_description_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="97,000 VNĐ"
            android:textColor="#ed2024"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/zpsdk_method_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="@dimen/payment_displayInfo_padding"
        android:paddingRight="@dimen/payment_displayInfo_padding"
        android:singleLine="false"
        android:textColor="#333333"
        android:textSize="15dp"
        android:textStyle="italic" />

    <!--
         <EditText
        android:id="@+id/url_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/zalosdk_border06"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="@dimen/sdk_form_input_size"
        android:visibility="gone" />
    -->

    <vn.zing.pay.zmpsdk.business.atm.webview.WebPaymentBridge
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible" />

</LinearLayout>