<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/zpw_bg_top_bottom_side_border"
    android:orientation="vertical"
    android:paddingBottom="@dimen/zpw_padding_10"
    android:paddingLeft="@dimen/zpw_padding_10"
    android:paddingRight="@dimen/zpw_padding_5"
    android:paddingTop="@dimen/zpw_padding_10"
    android:visibility="gone"

 >

    <ImageView
        android:id="@+id/zpw_payment_error_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/zpw_margin_top_supper_supper_label"
        android:src="@drawable/ic_success" />

    <TextView
        android:id="@+id/zpw_payment_error_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/zpw_margin_top"
        android:layout_marginBottom="@dimen/zpw_margin_top_medium_label"
        android:text="@string/zpw_string_payment_error_label"
        android:textColor="@color/text_color_bold"
        android:textSize="@dimen/zpw_text_size_medium" />
</LinearLayout>