<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/zpw_bg_top_bottom_side_border"
    android:padding="@dimen/zpw_padding_10"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/zpw_zalopay_logo_imageview"
        android:layout_width="@dimen/payment_app_icon_size"
        android:layout_height="@dimen/payment_app_icon_size"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="@dimen/pading_top_min" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/zalopay_bill_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_color_bold"
                android:textSize="@dimen/zpw_text_size_medium_l" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=" VNĐ"
                android:textColor="@color/text_color_bold"
                android:textSize="@dimen/text_size_vnd" />
        </LinearLayout>

        <TextView
            android:id="@+id/zalopay_info_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/zingpaysdk_zalopay_info_status"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/holo_red_light" />
    </LinearLayout>

</LinearLayout>