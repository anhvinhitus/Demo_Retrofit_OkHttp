<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/supperRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:elevation="4dp"
    android:orientation="vertical">

    <include
        android:id="@+id/zpsdk_header"
        layout="@layout/module__header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <ScrollView
            android:id="@+id/zpw_scrollview_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/zpsdk_app_info"
                    layout="@layout/module__app__info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/zpsdk_transfer_info"
                    layout="@layout/module_transfer_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <include
                    android:id="@+id/zpsdk_pay_success"
                    layout="@layout/module__pay__success"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/zpw_margin_top_submit_button_phone" />

                <include
                    android:id="@+id/zpsdk_pay_success_special"
                    layout="@layout/module__pay__success__special"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/zpw_margin_top_submit_button_phone" />

                <include
                    android:id="@+id/zpsdk_pay_fail"
                    layout="@layout/module__pay__fail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/zpw_margin_top_submit_button_phone" />

                <include
                    android:id="@+id/zpw_confirm"
                    layout="@layout/module__confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/zpw_submit_view"
                    layout="@layout/module__submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/zpw_margin_top_submit_button_phone" />

                <TextView
                    android:id="@+id/zpw_submit_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/zpw_padding_12"
                    android:background="?android:selectableItemBackground"
                    android:gravity="center"
                    android:padding="@dimen/zpw_padding_12"
                    android:text="@string/zpw_support"
                    android:textColor="@color/blue_btn_bg_pressed_color"
                    android:textSize="@dimen/zpw_text_size_medium"
                    android:visibility="gone" />
            </LinearLayout>

        </ScrollView>

        <include
            android:id="@+id/zpw_pay_info_buttom_view"
            layout="@layout/module__pay__info_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="gone" />

        <include
            android:id="@+id/zpsdk_pin_layout"
            layout="@layout/module__require_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <include
            android:id="@+id/zpw_pay_support_buttom_view"
            layout="@layout/dialog_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>