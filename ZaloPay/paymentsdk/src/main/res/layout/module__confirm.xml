<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/zpw_payment_confirm_root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/zpw_payment_method_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/zpw_title_padding_bottom"
            android:layout_marginLeft="@dimen/zpw_item_listview_padding_left_right"
            android:layout_marginTop="@dimen/zpw_padding_title_top"
            android:text="@string/zpw_string_title_payment_gateway_confirm_pay"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_color_grey" />

        <LinearLayout
            android:id="@+id/zpw_item_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/zpw_bg_top_bottom_side_border"
            android:paddingBottom="@dimen/zpw_padding_10"
            android:paddingLeft="@dimen/zpw_padding_10"
            android:paddingRight="@dimen/zpw_padding_10"
            android:paddingTop="@dimen/zpw_padding_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/zpw_zalopay_logo_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:id="@+id/zpw_channel_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/zpw_channel_label_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/zpw_item_listview_padding_left_right"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/zpw_text_size_small" />

                    <TextView
                        android:id="@+id/zpw_channel_name_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/zpw_item_listview_padding_left_right"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/text_color_bold"
                        android:textSize="@dimen/zpw_text_size_medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearlayout_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/zalopay_bill_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:ellipsize="end"
                            android:gravity="bottom"
                            android:singleLine="true"
                            android:textColor="@color/text_color_bold"
                            android:textSize="@dimen/zpw_text_size_medium_l" />

                        <TextView
                            android:id="@+id/zalopay_label_vnd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:ellipsize="end"
                            android:gravity="bottom"
                            android:singleLine="true"
                            android:text=" VND"
                            android:textColor="@color/text_color_bold"
                            android:textSize="@dimen/zpw_text_size_small" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/zalopay_info_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/zpw_text_size_small" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>