<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_linkacc_margin_bottom_group_input"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/zpw_item_listview_padding_top_bottom"
            android:layout_marginLeft="@dimen/zpw_padding_left_right"
            android:layout_marginRight="@dimen/zpw_padding_left_right"
            android:layout_marginTop="@dimen/zpw_item_listview_padding_top_bottom"
            android:text="@string/zpw_otp_instruction"
            android:textColor="@color/text_color"
            android:textSize="@dimen/zpw_text_size_medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zpw_line_height"
            android:background="@color/line" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/zpw_string_linkacc_otp_hint"
            android:paddingTop="@dimen/margin_small"
            android:tag="@string/zpw_string_linkacc_otp_hint"
            android:theme="@style/TextLabelHint">

            <vn.com.zalopay.wallet.view.custom.VPaymentDrawableEditText
                android:id="@+id/edt_otp_OTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_bottom_default_style"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="text|textVisiblePassword"
                android:longClickable="false"
                android:maxLength="@integer/maximum_character_field_vcb_otp"
                android:maxLines="1"
                android:paddingBottom="@dimen/zpw_edittext_padding_bottom"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:paddingTop="@dimen/zpw_edittext_padding_top"
                android:textSize="@dimen/sdk_form_input_card_number_size" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</LinearLayout>