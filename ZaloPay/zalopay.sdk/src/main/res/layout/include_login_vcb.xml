<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_linkacc_margin_top_ic"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_logo_linkacc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_zp_vcb" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_linkacc_margin_bottom_title"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/dimen_linkacc_margin_top_title"
        android:text="@string/sdk_vcb_login_title"
        android:textSize="@dimen/text_size_normal_small" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/zpw_line_height"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_linkacc_margin_bottom_group_input"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/sdk_vcb_linkacc_account_hint"
            android:paddingTop="@dimen/margin_small"
            android:tag="@string/sdk_vcb_linkacc_account_hint"
            android:theme="@style/TextLabelHint">

            <vn.com.zalopay.wallet.view.custom.VPaymentDrawableEditText
                android:id="@+id/edt_login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:background="@drawable/txt_bottom_default_style"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="text|textVisiblePassword"
                android:longClickable="false"
                android:maxLength="@integer/maximum_character_field_vcb_username"
                android:maxLines="1"
                android:paddingBottom="@dimen/zpw_edittext_padding_bottom"
                android:paddingRight="@dimen/margin_small"
                android:paddingTop="@dimen/zpw_edittext_padding_top"
                android:textSize="@dimen/sdk_form_input_card_number_size" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/sdk_vcb_linkacc_password_hint"
            android:paddingTop="@dimen/margin_small"
            android:tag="@string/sdk_vcb_linkacc_password_hint"
            android:theme="@style/TextLabelHint"
            app:passwordToggleEnabled="false">

            <vn.com.zalopay.wallet.view.custom.VPaymentDrawableEditText
                android:id="@+id/edt_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:background="@drawable/txt_bottom_default_style"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="textPassword"
                android:longClickable="false"
                android:maxLength="@integer/maximum_character_field_vcb_password"
                android:maxLines="1"
                android:paddingBottom="@dimen/zpw_edittext_padding_bottom"
                android:paddingRight="@dimen/margin_small"
                android:paddingTop="@dimen/zpw_edittext_padding_top"
                android:textSize="@dimen/sdk_form_input_card_number_size" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/edt_login_captcha_textInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="@string/sdk_vcb_linkacc_captcha_hint"
                android:orientation="horizontal"
                android:paddingTop="@dimen/margin_small"
                android:tag="@string/sdk_vcb_linkacc_captcha_hint"
                android:theme="@style/TextLabelHint">

                <vn.com.zalopay.wallet.view.custom.VPaymentDrawableEditText
                    android:id="@+id/edt_login_captcha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:background="@drawable/txt_bottom_default_style"
                    android:imeOptions="actionDone|flagNoExtractUi"
                    android:inputType="textCapCharacters|textVisiblePassword"
                    android:longClickable="false"
                    android:maxLength="@integer/maximum_character_field_vcb_captcha"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/zpw_edittext_padding_bottom"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/zpw_edittext_padding_top"
                    android:textSize="@dimen/sdk_form_input_card_number_size" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/zpw_line_height"
                    android:layout_height="@dimen/margin_small"
                    android:background="@color/white" />

                <View
                    android:layout_width="@dimen/zpw_line_height"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/line" />

                <View
                    android:layout_width="@dimen/zpw_line_height"
                    android:layout_height="@dimen/margin_small"
                    android:background="@color/white" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_login_captcha"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingLeft="@dimen/padding_large"
                android:paddingRight="@dimen/padding_large"
                android:visibility="gone" />

            <WebView
                android:id="@+id/web_login_captcha"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="visible" />
            <LinearLayout
                android:id="@+id/layout_refresh_captcha"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:gravity="center">
            <ImageView
                android:id="@+id/refresh_captcha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zpw_padding_10"
                android:layout_marginRight="@dimen/zpw_padding_10"
                android:src="@drawable/ic_refresh_captcha" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zpw_line_height"
            android:background="@color/line" />

    </LinearLayout>

</LinearLayout>