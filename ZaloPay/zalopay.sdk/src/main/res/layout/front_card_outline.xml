<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/front_card_outline"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_center_img"
        android:layout_width="@dimen/center_image_width"
        android:layout_height="@dimen/center_image_height"
        android:layout_centerInParent="true" />

    <FrameLayout
        android:id="@+id/card_view_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_map"></FrameLayout>

    <FrameLayout
        android:id="@+id/chip_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp">

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="5dp"
            android:src="@drawable/bg_logo_card_default" />

    </FrameLayout>

</RelativeLayout>