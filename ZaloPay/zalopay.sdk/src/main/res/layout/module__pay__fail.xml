<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_info_finish"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/zpw_payment_fail_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/zpw_margin_bottom_supper_supper_label"
            android:layout_marginTop="@dimen/zpw_margin_top_supper_supper_label" />

        <TextView
            android:id="@+id/zpw_payment_fail_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/zpw_string_payment_fail_transaction"
            android:textColor="@color/text_color_bold"
            android:textSize="@dimen/zpw_text_size_big" />

        <TextView
            android:id="@+id/zpw_textview_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/zpw_margin_16"
            android:gravity="center"
            android:paddingLeft="@dimen/zpw_padding_10"
            android:paddingRight="@dimen/zpw_padding_10"
            android:textColor="@color/text_color_bold"
            android:textSize="@dimen/zpw_text_size_medium" />

        <TextView
            android:id="@+id/zpw_textview_update_level_inform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/zpw_margin_16"
            android:gravity="center"
            android:layout_marginLeft="@dimen/zpw_margin_10"
            android:layout_marginRight="@dimen/zpw_margin_10"
            android:paddingTop="@dimen/zpw_padding_10"
            android:paddingBottom="@dimen/zpw_padding_10"
            android:textColor="@color/text_color_dl"
            android:textSize="@dimen/zpw_text_size_medium"
            android:background="@drawable/zpw_bg_update_level_inform_content_border"/>

    </LinearLayout>

    <View
        android:id="@+id/zpw_payment_fail_dashline"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/layout_top"
        android:background="@color/background"
        android:paddingLeft="@dimen/zpw_padding_5"
        android:paddingRight="@dimen/zpw_padding_5" />

    <LinearLayout
        android:id="@+id/layout_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zpw_payment_fail_dashline"
        android:orientation="vertical"
        android:paddingLeft="@dimen/zpw_padding_10"
        android:paddingRight="@dimen/zpw_padding_5">

        <RelativeLayout
            android:id="@+id/zpw_payment_fail_rl_update_info"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/zpw_payment_fail_iv_update_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/zpw_payment_fail_tv_update_info_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/zpw_payment_fail_iv_update_info"
                android:paddingLeft="@dimen/zpw_padding_10"
                android:paddingRight="@dimen/zpw_padding_10"
                android:text="@string/zpw_update_info"
                android:textColor="@color/text_color_bold"
                android:textSize="@dimen/zpw_text_size_medium" />

            <ImageView
                android:id="@+id/zpw_payment_fail_iv_update_info_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/zpw_margin_10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zpw_line_height"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/zpw_margin_10"
                android:layout_toRightOf="@+id/zpw_payment_fail_iv_update_info"
                android:background="@color/background" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/zpw_payment_fail_rl_support"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/zpw_payment_fail_iv_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/zpw_payment_fail_tv_support_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/zpw_payment_fail_iv_support"
                android:paddingLeft="@dimen/zpw_padding_10"
                android:paddingRight="@dimen/zpw_padding_10"
                android:text="@string/zpw_support"
                android:textColor="@color/text_color_bold"
                android:textSize="@dimen/zpw_text_size_medium" />

            <ImageView
                android:id="@+id/zpw_payment_fail_iv_support_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/zpw_margin_10" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>