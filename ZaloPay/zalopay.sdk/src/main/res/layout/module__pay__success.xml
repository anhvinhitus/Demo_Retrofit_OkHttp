<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/credit_card_holder_success"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_info_finish"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/zpw_padding_10"
        android:paddingRight="@dimen/zpw_padding_5">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/zpw_payment_success_imageview"
            android:layout_width="@dimen/sdk_ic_success_size"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/zpw_margin_bottom_supper_supper_label"
            android:layout_marginTop="@dimen/zpw_margin_top_supper_supper_label"
            app:viewAspectRatio="1"
            app:actualImageScaleType="centerInside" />


        <TextView
            android:id="@+id/zpw_payment_success_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/zpw_string_payment_success_label"
            android:textColor="@color/text_color_bold"
            android:textSize="@dimen/zpw_text_size_medium_l" />

        <LinearLayout
            android:id="@+id/price_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/zpw_padding_10">

            <TextView
                android:id="@+id/payment_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/zpw_margin_top_medium_label"
                android:textColor="@color/text_color_bold"
                android:textSize="@dimen/zpw_text_size_big_m" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/preview_margin"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/zpw_string_vnd_success"
                android:textColor="@color/text_color_bold"
                android:textSize="@dimen/zpw_text_size_big_x" />
        </LinearLayout>

        <TextView
            android:id="@+id/payment_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/zpw_margin_top_supper_supper_label"
            android:gravity="center"
            android:textColor="@color/text_color_bold"
            android:textSize="@dimen/zpw_text_size_medium" />
        <LinearLayout
            android:id="@+id/layout_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zpw_line_height"
                android:layout_marginLeft="@dimen/zpw_padding_5"
                android:layout_marginRight="@dimen/zpw_padding_5"
                android:layout_marginBottom="@dimen/zpw_padding_20"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/zpw_padding_15"
                android:orientation="horizontal">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img_avatarFrom"
                    android:layout_width="@dimen/zpw_width_avatar"
                    android:layout_height="@dimen/zpw_width_avatar"
                    android:layout_gravity="center"
                    app:roundAsCircle="true"
                    app:placeholderImage="@drawable/ava_default"
                    app:actualImageScaleType="centerInside"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/zpw_payment_success_arrow"
                    android:layout_width="@dimen/sdk_ic_arrow_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/zpw_padding_15"
                    android:layout_marginRight="@dimen/zpw_padding_15"
                    app:viewAspectRatio="1"
                    app:actualImageScaleType="fitCenter"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img_avatarTo"
                    android:layout_width="@dimen/zpw_width_avatar"
                    android:layout_height="@dimen/zpw_width_avatar"
                    android:layout_gravity="center"
                    app:roundAsCircle="true"
                    app:placeholderImage="@drawable/ava_default"
                    app:actualImageScaleType="centerInside"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/zpw_padding_5"
                android:paddingRight="@dimen/zpw_padding_5"
                android:layout_marginBottom="@dimen/zpw_padding_10">
                <TextView
                    android:id="@+id/lable_UserTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zpw_string_transfer_title"
                    android:layout_alignParentLeft="true" />
                <TextView
                    android:id="@+id/text_userTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="@integer/line_text_1"
                    android:gravity="right"
                    android:ellipsize = "end"
                    android:layout_marginLeft="@dimen/zpw_padding_20"
                    android:textColor="@color/text_color_bold"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/lable_UserTo"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/zpw_padding_5"
                android:paddingRight="@dimen/zpw_padding_5"
                android:layout_marginBottom="@dimen/zpw_padding_10">
                <TextView
                    android:id="@+id/lable_zalopay_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zpw_string_transfer_zalopay_id"
                    android:layout_alignParentLeft="true" />
                <TextView
                    android:id="@+id/text_zalopay_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="@integer/line_text_1"
                    android:gravity="right"
                    android:ellipsize = "end"
                    android:layout_marginLeft="@dimen/zpw_padding_20"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_color_primary"
                    android:layout_toRightOf="@+id/lable_zalopay_id"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_success_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/zpw_padding_5"
                android:paddingRight="@dimen/zpw_padding_5"
                android:layout_marginBottom="@dimen/zpw_padding_10">
                <TextView
                    android:id="@+id/lable_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zpw_string_transfer_description"
                    android:layout_alignParentLeft="true" />
                <TextView
                    android:id="@+id/text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="@integer/line_text_1"
                    android:gravity="right"
                    android:ellipsize = "end"
                    android:layout_marginLeft="@dimen/zpw_padding_20"
                    android:textColor="@color/text_color_bold"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/lable_description"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/zpw_padding_5"
                android:paddingRight="@dimen/zpw_padding_5"
                android:layout_marginBottom="@dimen/zpw_padding_15">
                <TextView
                    android:id="@+id/lable_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zpw_string_transfer_date"
                    android:layout_alignParentLeft="true" />
                <TextView
                    android:id="@+id/text_transfer_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="@integer/line_text_1"
                    android:gravity="right"
                    android:ellipsize = "end"
                    android:layout_marginLeft="@dimen/zpw_padding_20"
                    android:textColor="@color/text_color_bold"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/lable_time"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>