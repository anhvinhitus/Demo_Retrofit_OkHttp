<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/order_amount_total_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/sdk_margin_top_bottom_large"
        android:layout_marginTop="@dimen/sdk_margin_top_bottom_large"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:text="@string/sdk_currency_unit"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/sdk_text_size_amount_unit"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/order_amount_total_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="bottom"
            android:textColor="@color/text_color_bold"
            android:textSize="@dimen/sdk_text_size_amount_supper" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/zpw_margin_left"
            android:gravity="bottom"
            android:text="@string/sdk_currency_unit"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/sdk_text_size_amount_unit" />
    </LinearLayout>

    <TextView
        android:id="@+id/order_description_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdk_margin_left_right"
        android:layout_marginRight="@dimen/sdk_margin_left_right"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="3"
        android:textColor="@color/text_color_grey"
        android:textSize="@dimen/zpw_text_size_medium"
        android:textStyle="italic" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/sdk_margin_left_right"
        android:background="@drawable/dash_line" />

    <RelativeLayout
        android:id="@+id/voucher_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sdk_margin_left_right"
        android:layout_marginLeft="@dimen/sdk_margin_left_right"
        android:layout_marginRight="@dimen/sdk_margin_left_right"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/sdk_voucher_title"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/zpw_text_size_medium" />

        <TextView
            android:id="@+id/voucher_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/sdk_voucher_input_text"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/zpw_text_size_medium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/active_voucher_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sdk_margin_left_right"
        android:layout_marginLeft="@dimen/sdk_margin_left_right"
        android:layout_marginRight="@dimen/sdk_margin_left_right"
        android:visibility="gone">

        <TextView
            android:id="@+id/active_voucher_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/zpw_text_size_medium" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/active_voucher_del_img"
            android:layout_width="@dimen/sdk_icon_size"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/active_voucher_textview"
            app:actualImageScaleType="centerInside"
            app:viewAspectRatio="1" />

        <TextView
            android:id="@+id/voucher_discount_amount_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/zpw_text_size_medium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/appname_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sdk_margin_left_right"
        android:layout_marginLeft="@dimen/sdk_margin_left_right"
        android:layout_marginRight="@dimen/sdk_margin_left_right"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/sdk_appname_title"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/zpw_text_size_medium" />

        <TextView
            android:id="@+id/appname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/zpw_text_size_medium" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_detail_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdk_margin_left_right"
        android:layout_marginRight="@dimen/sdk_margin_left_right"
        android:orientation="vertical">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sdk_margin_left_right"
        android:layout_marginLeft="@dimen/sdk_margin_left_right"
        android:layout_marginRight="@dimen/sdk_margin_left_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/sdk_order_fee_title"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/zpw_text_size_medium" />

        <TextView
            android:id="@+id/order_fee_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/sdk_order_fee_free"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/zpw_text_size_medium" />
    </RelativeLayout>

    <View
        android:id="@+id/order_info_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zpw_line_height"
        android:layout_marginLeft="@dimen/sdk_margin_left_right"
        android:background="@color/dark_transparent" />

</LinearLayout>