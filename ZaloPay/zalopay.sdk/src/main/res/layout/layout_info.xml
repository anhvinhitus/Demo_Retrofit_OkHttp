<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sdk_trans_id_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/sdk_margin_top_bottom"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/key_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/sdk_trans_id_title"
        android:textColor="@color/text_color_grey"
        android:textSize="@dimen/zpw_text_size_medium"
        android:layout_marginRight="@dimen/margin_large"/>

    <TextView
        android:id="@+id/value_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/key_txt"
        android:textColor="@color/text_color_grey"
        android:gravity="right"
        android:textSize="@dimen/zpw_text_size_medium" />

</RelativeLayout>