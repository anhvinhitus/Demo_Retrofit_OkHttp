<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_info_tranfer_layout_wrapper_linerlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tranfer_user_name_relative_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/zpw_padding_app_info_left_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/zpw_string_transfer_title"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/zpw_text_size_medium" />

        <TextView
            android:id="@+id/zpw_wallet_transfer_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_color_bold"
            android:textSize="@dimen/zpw_text_size_medium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/zalopay_name_relative_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/zpw_padding_app_info_left_right"
        android:paddingLeft="@dimen/zpw_padding_app_info_left_right"
        android:paddingRight="@dimen/zpw_padding_app_info_left_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/zpw_string_zalopay_name_label"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/zpw_text_size_medium" />

        <TextView
            android:id="@+id/zpw_zalopay_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_color_bold"
            android:textSize="@dimen/zpw_text_size_medium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/zpw_wallet_transfer_layout_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/zpw_padding_app_info_left_right"
        android:paddingLeft="@dimen/zpw_padding_app_info_left_right"
        android:paddingRight="@dimen/zpw_padding_app_info_left_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:gravity="top"
            android:singleLine="true"
            android:text="@string/zpw_string_transfer_price"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/zpw_text_size_medium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/zpw_wallet_transfer_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_color_bold"
                android:textSize="@dimen/zpw_text_size_medium_l" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zpw_margin_mini_size"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/zpw_string_payment_currency_label"
                android:textColor="@color/text_color_bold"
                android:textSize="@dimen/zpw_text_size_medium_small" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/zpw_wallet_transfer_layout_payamont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/zpw_padding_app_info_left_right"
        android:paddingLeft="@dimen/zpw_padding_app_info_left_right"
        android:paddingRight="@dimen/zpw_padding_app_info_left_right">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="top"
            android:singleLine="true"
            android:text="@string/zpw_string_transfer_amount"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/zpw_text_size_medium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/zpw_wallet_transfer_payamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_color_bold"
                android:textSize="@dimen/zpw_text_size_medium_l"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zpw_margin_mini_size"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/zpw_string_payment_currency_label"
                android:textColor="@color/text_color_bold"
                android:textSize="@dimen/zpw_text_size_medium_small" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>