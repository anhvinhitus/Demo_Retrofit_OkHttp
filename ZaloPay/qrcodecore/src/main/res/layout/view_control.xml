<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <LinearLayout style="@style/MatchWrap.Horizontal">

        <TextView
            android:id="@+id/start_spot"
            style="@style/AutoWrapTv"
            android:text="Start Spot" />

        <TextView
            android:id="@+id/stop_spot"
            style="@style/AutoWrapTv"
            android:text="Stop spot" />
    </LinearLayout>

    <LinearLayout style="@style/MatchWrap.Horizontal">

        <TextView
            android:id="@+id/start_spot_showrect"
            style="@style/AutoWrapTv"
            android:text="Start spot show rect" />

        <TextView
            android:id="@+id/stop_spot_hiddenrect"
            style="@style/AutoWrapTv"
            android:text="Stop spot hidden rect" />
    </LinearLayout>

    <LinearLayout style="@style/MatchWrap.Horizontal">

        <TextView
            android:id="@+id/show_rect"
            style="@style/AutoWrapTv"
            android:text="Show rect" />

        <TextView
            android:id="@+id/hidden_rect"
            style="@style/AutoWrapTv"
            android:text="Hidden rect" />
    </LinearLayout>

    <LinearLayout style="@style/MatchWrap.Horizontal">

        <TextView
            android:id="@+id/start_preview"
            style="@style/AutoWrapTv"
            android:text="Start preview" />

        <TextView
            android:id="@+id/stop_preview"
            style="@style/AutoWrapTv"
            android:text="Stop preview" />
    </LinearLayout>

    <LinearLayout style="@style/MatchWrap.Horizontal">

        <TextView
            android:id="@+id/open_flashlight"
            style="@style/AutoWrapTv"
            android:text="Open flashlight" />

        <TextView
            android:id="@+id/close_flashlight"
            style="@style/AutoWrapTv"
            android:text="Close flashlight" />
    </LinearLayout>

</LinearLayout>
