<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:clickable="true"
    android:gravity="bottom">

    <RelativeLayout
        android:id="@+id/promotion_cash_back_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/promotion_cash_back_ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/promotion_cash_back_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:textAllCaps="true"
                android:textColor="#ff5237"
                android:textSize="17sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/promotion_cash_back_iv_fire_popup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/fire_popup" />

                <TextView
                    android:id="@+id/promotion_cash_back_tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="30dp"
                    android:textColor="#fc393d"
                    android:textSize="60sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/promotion_cash_back_tv_amount"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@+id/promotion_cash_back_tv_amount"
                    android:layout_marginLeft="6dp"
                    android:text="@string/vnd"
                    android:textColor="#fc393d"
                    android:textSize="20sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/promotion_cash_back_tv_campaign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/c_text_black" />

            <LinearLayout
                android:id="@+id/promotion_cash_back_ll_submit"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_btn_submit_promotion_cash_back_selector"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accept"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/promotion_cash_back_tv_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/text_green"
                android:textSize="17sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/promotion_cash_back_iv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/promotion_cash_back_ll_content"
            android:layout_marginBottom="-30dp"
            android:src="@drawable/top_cashback" />
    </RelativeLayout>

</LinearLayout>