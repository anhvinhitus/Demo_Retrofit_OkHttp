<resources>

    <style name="CardViewStyle" parent="android:Widget.TextView">
        <item name="cardCornerRadius">@dimen/cardview_corner_radius</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/textsize.normal.l</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar.SearchText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/textsize.small</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HomePage.Title" parent="android:Widget.TextView">
        <item name="android:textColor">@color/c_text_black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="LeftMenu.Title" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/leftmenu.title</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LeftMenu.Group.Title" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/leftmenu.group.title</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Deposit.CardInfo.Title" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textsize.normal.l</item>
        <item name="android:textColor">@color/leftmenu.title</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Deposit.CardInfo.Tax" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textsize.small</item>
        <item name="android:textColor">@color/leftmenu.title</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextView.Title.Bold">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/c_text_black</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:typeface">monospace</item>
    </style>


    <style name="TextView.Title.Default">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/c_text_black</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="TextView.Group.Title" parent="android:Widget.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txt_group_title</item>
        <item name="android:textSize">@dimen/textsize.group.title</item>
    </style>

    <style name="TextView.Default" parent="android:Widget.TextView">
        <item name="android:textColor">@color/txt_item_main</item>
        <item name="android:textSize">@dimen/textsize.text.main</item>
    </style>

    <style name="TextView.Item.Main" parent="android:Widget.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txt_item_main</item>
        <item name="android:textSize">@dimen/textsize.text.main</item>
    </style>

    <style name="TextView.Item.Title" parent="android:Widget.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txt_item_sub</item>
        <item name="android:textSize">@dimen/textsize.small</item>
    </style>

    <style name="TextView.Item.Sub" parent="android:Widget.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txt_item_sub</item>
        <item name="android:textSize">@dimen/textsize.text.sub</item>
    </style>

    <style name="Button.Default" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button.text.size</item>
    </style>

    <style name="Button.Default.New">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button.height</item>
        <item name="android:minHeight">@dimen/button.height</item>
        <item name="android:background">@drawable/bg_btn_blue_border_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/button.margin.left</item>
        <item name="android:layout_marginRight">@dimen/button.margin.right</item>
        <item name="android:layout_marginTop">@dimen/button.margin.top.max</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/button.text.size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Default.Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button.height</item>
        <item name="android:background">@drawable/bg_btn_blue_border_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">@dimen/button.width.min</item>
        <item name="android:paddingLeft">@dimen/button.text.padding.left</item>
        <item name="android:paddingRight">@dimen/button.text.padding.right</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/button.text.size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Default.Bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button.height</item>
        <item name="android:minHeight">@dimen/button.height</item>
        <item name="android:background">@drawable/bg_btn_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">@string/confirm</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="TextView.Profile.Edit" parent="android:Widget.TextView">
        <item name="android:textColor">@color/c_text_black</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="Passcode.EditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textCursorDrawable">@color/transparent</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/separate</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Intro.TextView.Title" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing.medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Intro.TextView.Content" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing.small</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

    <style name="IntroImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">@string/loremipsum</item>
    </style>

    <style name="TextLabelHintDefault.Error">
        <item name="android:textColor">@color/design_textinput_error_color_light</item>
    </style>


    <style name="TextLabelHintDefault" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AvatarDraweeView" parent="NormalDraweeView">
        <item name="roundAsCircle">true</item>
        <item name="failureImage">@drawable/ic_avatar_default</item>
    </style>

    <style name="AvatarDraweeView.Border">
        <item name="roundingBorderWidth">3dp</item>
        <item name="roundingBorderColor">@color/white</item>
    </style>

    <style name="RoundedCornerDraweeView" parent="AvatarDraweeView">
        <item name="roundAsCircle">false</item>
        <item name="roundedCornerRadius">6dp</item>
        <item name="failureImage">@color/silver</item>
    </style>

    <style name="NormalDraweeView">
        <item name="actualImageScaleType">centerCrop</item>
        <item name="failureImageScaleType">centerCrop</item>
        <item name="placeholderImageScaleType">centerCrop</item>
        <item name="failureImage">@color/silver</item>
        <item name="placeholderImage">@color/silver</item>
        <item name="fadeDuration">0</item>
        <item name="roundAsCircle">false</item>
    </style>

    <style name="ZaloPayEditText">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="zlp_autoValidate">false</item>
        <item name="zlp_checkCharactersCountAtBeginning">false</item>
        <item name="zlp_clearButton">true</item>
        <item name="zlp_floatingLabel">highlight</item>
        <item name="zlp_paddingLeftLine">0dp</item>
        <item name="zlp_textColorHint">@color/hint</item>
        <item name="zlp_underlineColor">@color/separate</item>
        <item name="android:maxLines">1</item>
        <item name="zlp_validateOnFocusLost">true</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">15sp</item>
        <item name="zlp_floatingLabelPadding">6dp</item>
    </style>

    <style name="ZaloPayEditText.Money">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">@integer/max_length_edittext_money</item>
        <item name="android:hint">@string/hint_amount</item>
    </style>

    <style name="RippleBackground">
        <item name="rb_color">#40FFFFFF</item>
        <item name="rb_duration">4000</item>
        <item name="rb_radius">40dp</item>
        <item name="rb_rippleAmount">5</item>
        <item name="rb_scale">5</item>
        <item name="android:layout_marginBottom">120dp</item>
    </style>

    <style name="HomeHeaderItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@drawable/white_selector</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WrapperEditText">
        <item name="android:background">@color/white</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="Widget.Design.TabLayout.LinkBank" parent="android:Widget">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">0dp</item>
    </style>
</resources>
