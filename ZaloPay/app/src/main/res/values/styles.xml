<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="CardViewStyle" parent="android:Widget.TextView">
        <item name="cardCornerRadius">@dimen/cardview_corner_radius</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/textsize.normal.l</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HomePage.Title" parent="android:Widget.TextView">
        <item name="android:textColor">@color/c_text_black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="LeftMenu.Title" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/leftmenu.title</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LeftMenu.Group.Title" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/leftmenu.group.title</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Deposit.CardInfo.Title" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textsize.normal.l</item>
        <item name="android:textColor">@color/leftmenu.title</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Deposit.CardInfo.Tax" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textsize.small</item>
        <item name="android:textColor">@color/leftmenu.title</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextView.Title.Bold">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/c_text_black</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:typeface">monospace</item>
    </style>


    <style name="TextView.Title.Default">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/c_text_black</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="TextView.Group.Title" parent="android:Widget.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txt_group_title</item>
        <item name="android:textSize">@dimen/textsize.group.title</item>
    </style>

    <style name="TextView.Item.Main" parent="android:Widget.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txt_item_main</item>
        <item name="android:textSize">@dimen/textsize.text.main</item>
    </style>

    <style name="TextView.Item.Title" parent="android:Widget.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txt_item_sub</item>
        <item name="android:textSize">@dimen/textsize.small</item>
    </style>

    <style name="TextView.Item.Sub" parent="android:Widget.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txt_item_sub</item>
        <item name="android:textSize">@dimen/textsize.text.sub</item>
    </style>

    <style name="Button.Default" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="Button.Default.Bottom">
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@drawable/bg_btn_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">@string/confirm</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="TextView.Profile.Edit" parent="android:Widget.TextView">
        <item name="android:textColor">@color/c_text_black</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="Passcode.EditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textCursorDrawable">@color/transparent</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/separate</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Intro.TextView.Title" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing.medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Intro.TextView.Content" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing.small</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

    <style name="IntroImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">@string/loremipsum</item>
    </style>

    <style name="TextLabelHintDefault.Error">
        <item name="android:textColor">@color/design_textinput_error_color_light</item>
    </style>


    <style name="TextLabelHintDefault" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AvatarDraweeView">
        <item name="actualImageScaleType">centerCrop</item>
        <item name="failureImageScaleType">centerCrop</item>
        <item name="placeholderImageScaleType">centerCrop</item>
        <item name="roundAsCircle">true</item>
        <item name="failureImage">@drawable/ic_avatar_default</item>
        <item name="placeholderImage">@color/silver</item>
        <item name="fadeDuration">0</item>
    </style>

    <style name="AvatarDraweeView.Border">
        <item name="roundingBorderWidth">3dp</item>
        <item name="roundingBorderColor">@color/white</item>
    </style>

</resources>
