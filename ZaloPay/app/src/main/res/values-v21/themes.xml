<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">?colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar.AppColor">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/statusBar</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Splash">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/splash_bg</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@layout/activity_splash_background</item>
    </style>

    <style name="AppTheme.Payment.RedPacket">
        <item name="android:windowBackground">@drawable/layer_redpacket_background</item>
        <item name="android:statusBarColor">@color/red_packet</item>
    </style>
</resources>