<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:width="18dp"
                  android:height="18dp">
                <shape android:shape="rectangle">
                    <corners android:radius="2dp"/>
                    <solid android:color="@color/bg_checkbox_checked"/>
                    <padding android:bottom="6dp"
                             android:left="4dp"
                             android:right="4dp"
                             android:top="6dp"/>
                </shape>
            </item>
            <item android:width="13dp"
                  android:height="9dp"
                  android:drawable="@drawable/ic_checked"
                  android:gravity="center"/>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item android:width="18dp"
                  android:height="18dp">
                <shape android:shape="rectangle">
                    <corners android:radius="2dp"/>
                    <solid android:color="@color/bg_checkbox_uncheck"/>
                    <padding android:bottom="6dp"
                             android:left="4dp"
                             android:right="4dp"
                             android:top="6dp"/>
                </shape>
            </item>
            <item android:width="13dp"
                  android:height="9dp"
                  android:drawable="@drawable/ic_checked"
                  android:gravity="center"/>
        </layer-list>
    </item>
</selector>