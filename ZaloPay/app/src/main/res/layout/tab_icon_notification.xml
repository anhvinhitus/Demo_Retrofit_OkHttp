<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground">


    <LinearLayout
        android:id="@+id/custom_tab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/custom_tab_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerInParent="true"
            android:scaleType="center" />

        <TextView
            android:id="@+id/custom_tab_title"
            style="@style/TextView.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textColor="@color/custom_tab_icon" />
    </LinearLayout>


    <View
        android:id="@+id/custom_tab_notification_mark"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignTop="@id/custom_tab_container"
        android:layout_toRightOf="@id/custom_tab_container"
        android:background="@drawable/shape_notification_mark"
        android:visibility="gone" />

</RelativeLayout>
