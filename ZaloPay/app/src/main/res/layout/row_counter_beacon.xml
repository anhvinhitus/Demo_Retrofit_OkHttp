<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/beacon_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:paddingBottom="@dimen/default_margin_large"
        android:paddingTop="@dimen/default_margin_large">

        <TextView
            android:id="@+id/counter_description"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="VinMart - Bàn GD 2 - Hoá đơn bán lẻ" />

        <TextView
            android:id="@+id/counter_order_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/text_margin"
            android:gravity="end|center_vertical"
            android:textSize="20sp"
            tools:text="30.000 VND" />
    </LinearLayout>
</LinearLayout>
