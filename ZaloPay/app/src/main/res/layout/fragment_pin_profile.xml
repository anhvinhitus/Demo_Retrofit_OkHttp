<com.zalopay.ui.widget.KeyboardFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zalopay="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_btn_bg_color"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="0.0"
            android:background="@color/background"
            android:orientation="vertical"
            android:paddingBottom="@dimen/button.height">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="6dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:text="@string/pin_title"
                android:textColor="#727f8c"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/separate"
                android:paddingTop="@dimen/spacing.medium.s" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/spacing.medium">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="79dp">

                    <vn.com.vng.zalopay.ui.widget.PassCodeView
                        android:id="@+id/passcodeInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="@dimen/spacing.small"
                        zalopay:hint="@string/pin"
                        zalopay:length="@integer/pin_length" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="79dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInputPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="@dimen/spacing.medium">

                        <vn.com.vng.zalopay.ui.widget.ClearableEditText
                            android:id="@+id/edtPhone"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/txt_bottom_default_style"
                            android:hint="@string/hint_phone"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:paddingBottom="@dimen/spacing.small"
                            android:paddingTop="@dimen/spacing.small"
                            android:singleLine="true"
                            android:textColorHint="@color/hint" />
                    </android.support.design.widget.TextInputLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="79dp">

                    <vn.com.vng.zalopay.ui.widget.InputZaloPayNameView
                        android:id="@+id/inputZaloPayName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:paddingRight="4dp" />
                </FrameLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/separate" />

            <LinearLayout
                android:id="@+id/layoutZaloPayNameNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="visible">

                <TextView
                    style="@style/TextView.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint.edit.account" />

                <TextView
                    style="@style/TextView.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing.small"
                    android:drawableLeft="@drawable/ic_checkmark"
                    android:drawablePadding="@dimen/spacing.small"
                    android:text="@string/hint.edit.account1" />

                <TextView
                    style="@style/TextView.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableLeft="@drawable/ic_checkmark"
                    android:drawablePadding="@dimen/spacing.small"
                    android:text="@string/hint.edit.account2" />

                <TextView
                    style="@style/TextView.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableLeft="@drawable/ic_checkmark"
                    android:drawablePadding="@dimen/spacing.small"
                    android:text="@string/hint.edit.account3" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvTermsOfUser3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingBottom="@dimen/spacing.medium"
                    android:paddingLeft="@dimen/spacing.small"
                    android:paddingRight="@dimen/spacing.small"
                    android:paddingTop="@dimen/spacing.tiny"
                    android:textColor="@color/deposit.title"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="13sp"
                    android:visibility="visible"
                    tools:text="@string/agree.term.of.use" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/bg_btn_gray"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/Button.Default"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button.height"
            android:gravity="center"
            android:text="@string/btn_continue" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/app_padding"
            android:src="@drawable/ic_arrow_right"
            android:tint="@color/white" />
    </LinearLayout>
</com.zalopay.ui.widget.KeyboardFrameLayout>