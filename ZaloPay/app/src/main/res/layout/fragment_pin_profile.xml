<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zalopay="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="0.0"
            android:background="@color/background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="6dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:text="@string/pin_title"
                android:textColor="#727f8c"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/separate"
                android:paddingTop="@dimen/spacing.medium.s" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/spacing.medium">

                <vn.com.vng.zalopay.ui.widget.PassCodeView
                    android:id="@+id/passcodeInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing.small"
                    zalopay:hint="@string/hint_pin"
                    zalopay:length="@integer/pin_length"
                    zalopay:paddingRight="16dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:paddingTop="@dimen/spacing.small">

                    <vn.com.vng.zalopay.ui.widget.ClearableEditText
                        android:id="@+id/edtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing.small"
                        android:background="@drawable/txt_bottom_default_style"
                        android:ellipsize="end"
                        android:hint="@string/hint_phone"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/spacing.small"
                        android:paddingRight="@dimen/spacing.medium"
                        android:paddingTop="@dimen/spacing.small"
                        android:singleLine="true"
                        android:textColorHint="@color/hint" />
                </android.support.design.widget.TextInputLayout>

                <vn.com.vng.zalopay.ui.widget.InputZaloPayNameView
                    android:id="@+id/inputZaloPayName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="4dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/separate" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/container">

            <LinearLayout
                android:id="@+id/layoutAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvTermsOfUser1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/spacing.small"
                    android:paddingRight="@dimen/spacing.small"
                    android:paddingTop="@dimen/spacing.medium"
                    android:text="@string/terms_of_use_1"
                    android:textColor="@color/deposit.title"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="13sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvTermsOfUser2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/spacing.small"
                    android:paddingRight="@dimen/spacing.small"
                    android:paddingTop="@dimen/spacing.tiny"
                    android:textColor="@color/deposit.title"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="13sp"
                    tools:text="@string/terms_of_use_2" />

                <TextView
                    android:id="@+id/tvTermsOfUser3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/spacing.medium"
                    android:paddingLeft="@dimen/spacing.small"
                    android:paddingRight="@dimen/spacing.small"
                    android:paddingTop="@dimen/spacing.tiny"
                    android:textColor="@color/deposit.title"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="13sp"
                    tools:text="@string/agree.term.of.use" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</ScrollView>