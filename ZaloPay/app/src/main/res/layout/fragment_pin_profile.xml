<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zalopay="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="6dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="14dp"
        android:text="@string/pin_title"
        android:textColor="#727f8c"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/spacing.medium.s"
        android:paddingRight="@dimen/spacing.medium.s"
        android:paddingTop="@dimen/spacing.medium.s">

        <vn.com.vng.zalopay.ui.widget.PassCodeView
            android:id="@+id/passcodeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="6"
            zalopay:hint="@string/hint_pin"
            zalopay:length="6"
            zalopay:note="@string/note_pin" />

        <vn.com.vng.zalopay.ui.widget.PassCodeView
            android:id="@+id/passcodeConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing.tiny"
            android:maxLength="6"
            zalopay:hint="@string/hint_pin_compare"
            zalopay:length="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="top"
        android:orientation="horizontal"
        android:padding="@dimen/app_padding">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvShowPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/show_pass" />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:text="@string/txt_cancel"
            android:textColor="@color/txt_cancel"
            android:textSize="@dimen/textsize.small" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_weight="0.0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTermsOfUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing.medium.t"
            android:text="@string/terms_of_use"
            android:textColor="@color/deposit.title"
            android:textColorLink="@color/colorPrimary"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/bg_btn_blue"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/btn_continue"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_padding"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>