<com.zalopay.ui.widget.KeyboardFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zalopay="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_btn_bg_color"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="0.0"
            android:background="@color/background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="6dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:text="@string/pin_title"
                android:textColor="#727f8c"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/separate"
                android:paddingTop="@dimen/spacing.medium.s" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/layoutPin"
                    android:layout_width="match_parent"
                    android:layout_height="74dp">

                    <vn.com.vng.zalopay.ui.widget.PassCodeView
                        android:id="@+id/passcodeInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="16dp"
                        zalopay:hint="@string/pin"
                        zalopay:length="@integer/pin_length"
                        zalopay:paddingRight="16dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp">

                    <com.zalopay.ui.widget.edittext.ZPEditText
                        android:id="@+id/edtPhone"
                        style="@style/ZaloPayEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:hint="@string/hint_phone"
                        android:maxLength="@integer/max_length_phone"
                        zalopay:zlp_autoValidate="false" />
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvTermsOfUser3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingLeft="@dimen/spacing.small"
                android:paddingRight="@dimen/spacing.small"
                android:paddingTop="@dimen/spacing.medium"
                android:textColor="@color/deposit.title"
                android:textColorLink="@color/colorPrimary"
                android:textSize="13sp"
                android:visibility="visible"
                tools:text="@string/agree.term.of.use" />

            <Button
                android:id="@+id/btnContinue"
                style="@style/Button.Default.New"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button.height"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/spacing.medium"
                android:text="@string/btn_continue" />
        </LinearLayout>
    </ScrollView>
</com.zalopay.ui.widget.KeyboardFrameLayout>