<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zalopay="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="14dp"
            android:text="@string/pin_title"
            android:textColor="#727f8c"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/separate"
            android:paddingTop="@dimen/spacing.medium.s" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/spacing.medium.s"
            android:paddingRight="@dimen/spacing.medium.s">

            <vn.com.vng.zalopay.ui.widget.PassCodeView
                android:id="@+id/passcodeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                zalopay:hint="@string/hint_pin"
                zalopay:length="@integer/pin_length" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/spacing.small"
                app:errorEnabled="false">

                <vn.com.vng.zalopay.ui.widget.ClearableEditText
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:hint="@string/hint_phone"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:paddingTop="@dimen/spacing.small"
                    android:singleLine="true"
                    android:textColorHint="@color/hint" />
            </android.support.design.widget.TextInputLayout>

            <vn.com.vng.zalopay.ui.widget.InputZaloPayNameView
                android:id="@+id/inputZaloPayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/separate" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="top"
            android:orientation="horizontal"
            android:visibility="visible">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing.small"
                android:checked="false"
                android:gravity="center"
                android:paddingBottom="@dimen/spacing.medium"
                android:paddingTop="@dimen/spacing.medium"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvShowPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="left|center_vertical"
                android:padding="@dimen/spacing.small"
                android:text="@string/show_passcode"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.0"
                android:gravity="center"
                android:padding="@dimen/spacing.medium"
                android:text="@string/txt_cancel"
                android:textColor="@color/txt_cancel"
                android:textSize="@dimen/textsize.small"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="?attr/actionBarSize"
            android:layout_weight="0.0"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvTermsOfUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing.medium.t"
                android:textColor="@color/deposit.title"
                android:textColorLink="@color/colorPrimary"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/bg_btn_blue"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/Button.Default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/btn_continue" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_padding"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0" />


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>