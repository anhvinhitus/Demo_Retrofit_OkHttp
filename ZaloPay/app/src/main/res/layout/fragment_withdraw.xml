<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="vn.com.vng.zalopay.withdraw.ui.fragment.WithdrawFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing.small"
            android:paddingRight="@dimen/spacing.medium.t"
            android:paddingTop="@dimen/spacing.medium">

            <TextView
                android:id="@+id/tvResourceMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/min_money"
                android:textColor="@color/deposit.title"
                android:textSize="@dimen/textsize.small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing.tiny"
                android:gravity="right"
                android:text="@string/vnd"
                android:textColor="@color/deposit.title"
                android:textSize="@dimen/textsize.tiny.s" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate_stroke"
            android:background="@color/separate" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/WrapperEditText">

            <vn.com.vng.zalopay.ui.widget.MoneyEditText
                android:id="@+id/edtAmount"
                style="@style/ZaloPayEditText.Money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:hint="@string/hint_amount"
                android:maxLength="@integer/max_length_edittext_money" />
        </FrameLayout>

        <Button
            android:id="@+id/btnContinue"
            style="@style/Button.Default.New"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button.height"
            android:text="@string/btn_continue" />
    </LinearLayout>
</ScrollView>