<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toast_layout_root"
    android:layout_width="228dp"
    android:layout_height="100dp"
    android:background="@drawable/bg_round_black_alpha"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <com.zalopay.ui.widget.IconFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/protect_account_password_changed"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_medium"
        app:iconTopColor="@color/white"
        app:iconTopName="@string/general_check"
        app:iconTopSize="@dimen/personal_iconfont" />
</LinearLayout>