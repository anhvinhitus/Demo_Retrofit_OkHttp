<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWebAppBottomSheet"
    android:gravity="center"
    android:minHeight="140dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing.medium.h"
    android:paddingLeft="@dimen/spacing.medium.m"
    android:paddingRight="@dimen/spacing.medium.m"
    android:paddingTop="@dimen/spacing.medium.s">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/webapp_intro_bottomsheet"
        android:textColor="@color/colorWebAppBottomSheetText"
        android:textSize="@dimen/textsize.tiny" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        style="@style/RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing.large.t"
        android:fadingEdge="none"
        android:overScrollMode="never" />

</LinearLayout>