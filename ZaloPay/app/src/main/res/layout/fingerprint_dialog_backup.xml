<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backup_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_text"
        style="?attr/titleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/notification"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_color_bold"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/password_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="12dp"
        android:gravity="left"
        android:lineSpacingExtra="@dimen/pading_top_min"
        android:maxLines="2"
        android:text="@string/input.pin.to.access"
        android:textColor="@color/text_color_bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/hintPassword"
        style="@style/TextView.SubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="12dp"
        android:hint="@string/pin"
        android:textColor="@color/red"
        android:textColorHint="@color/colorPrimary"
        android:textSize="@dimen/textsize.tiny" />

    <vn.com.vng.zalopay.ui.widget.GridPasswordViewFitWidth
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="left"
        app:gpvGridColor="#ffffff"
        app:gpvLineColor="#858585"
        app:gpvLineWidth="1dp"
        app:gpvPasswordLength="@integer/pin_length"
        app:gpvPasswordType="numberPassword"
        app:gpvTextColor="#000000"
        app:gpvTextSize="5sp" />

</LinearLayout><!--

</RelativeLayout>-->
