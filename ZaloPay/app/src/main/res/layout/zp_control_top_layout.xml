<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/btn_qr_code"
        style="@style/TextView.Default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="?selector"
        android:drawablePadding="@dimen/spacing.medium.s"
        android:drawableTop="@drawable/ic_qrcode"
        android:gravity="center"
        android:padding="@dimen/app_padding"
        android:text="@string/txt_home_qrcode"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize.tiny" />

    <TextView
        android:id="@+id/btn_scan_to_pay"
        style="@style/TextView.Default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="?selector"
        android:drawablePadding="@dimen/spacing.medium.s"
        android:drawableTop="@drawable/ic_qrcode"
        android:gravity="center"
        android:padding="@dimen/app_padding"
        android:text="@string/txt_home_scantopay"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize.tiny" />

    <TextView
        android:id="@+id/btn_deposit"
        style="@style/TextView.Default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="?selector"
        android:drawablePadding="@dimen/spacing.medium.s"
        android:drawableTop="@drawable/ic_naptien"
        android:gravity="center"
        android:padding="@dimen/app_padding"
        android:text="@string/txt_home_deposit"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize.tiny" />

    <TextView
        android:id="@+id/btn_link_card"
        style="@style/TextView.Default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="?selector"
        android:drawablePadding="@dimen/spacing.medium.s"
        android:drawableTop="@drawable/ic_lienketthe"
        android:gravity="center"
        android:padding="@dimen/app_padding"
        android:text="@string/txt_home_link_card"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize.tiny" />
</LinearLayout>