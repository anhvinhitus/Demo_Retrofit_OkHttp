<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="@color/colorPrimary"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_scan_to_pay"
            style="@style/TextView.Default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="?selector"
            android:drawablePadding="@dimen/spacing.small"
            android:drawableTop="@drawable/ic_tratien"
            android:paddingBottom="24dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:text="@string/txt_home_scantopay"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/btn_balance"
            style="@style/TextView.Default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:paddingBottom="24dp"
            android:paddingTop="8dp"
            android:background="?selector"
            android:drawablePadding="@dimen/spacing.small"
            android:drawableTop="@drawable/ic_balance"
            android:gravity="center"
            android:text="@string/overbalance"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/btn_link_card"
            style="@style/TextView.Default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="?selector"
            android:drawablePadding="@dimen/spacing.small"
            android:drawableTop="@drawable/ic_lienketthe"
            android:paddingBottom="24dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:text="@string/txt_home_link_card"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_balance"
        style="@style/TextView.Default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="0 VND"
        android:textAllCaps="true"
        android:textColor="#9cdaff"
        android:textSize="@dimen/font_size_normal" />
</FrameLayout>