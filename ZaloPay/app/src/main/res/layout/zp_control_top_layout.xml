<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/btn_scan_to_pay"
        style="@style/HomeHeaderItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zalopay.ui.widget.IconFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:iconName="@string/header_payqrcode"
            app:iconSize="@dimen/font_size_home_function"
            app:typefaceAsset="@string/font_name"/>

        <TextView
            style="@style/TextView.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing.small"
            android:gravity="center"
            android:text="@string/txt_home_scantopay"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_normal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_balance"
        style="@style/HomeHeaderItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zalopay.ui.widget.IconFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:iconName="@string/header_overbalance"
            app:iconSize="@dimen/font_size_home_function"
            app:typefaceAsset="@string/font_name"/>

        <TextView
            style="@style/TextView.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing.small"
            android:gravity="center"
            android:text="@string/overbalance"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_normal"/>

        <TextView
            android:id="@+id/tv_balance"
            style="@style/TextView.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:gravity="center"
            android:text="0 VND"
            android:textColor="@color/txt_item_sub_2"
            android:textSize="@dimen/font_size_normal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_link_card"
        style="@style/HomeHeaderItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zalopay.ui.widget.IconFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:iconName="@string/header_linkcard"
            app:iconSize="@dimen/font_size_home_function"
            app:typefaceAsset="@string/font_name"/>

        <TextView
            style="@style/TextView.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing.small"
            android:gravity="center"
            android:text="@string/txt_home_link_card"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_normal"/>
    </LinearLayout>
</LinearLayout>
