<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".scanners.nfc.ScanNFCFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        >
        <TextView
            android:id="@+id/scan_nfc_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="40dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt điện thoại ở gần máy tính tiền để bắt đầu giao dịch"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/default_margin"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_read_nfc"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_btn_blue"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            style="@style/Button.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/btn_emulate_nfc" />
    </LinearLayout>
</LinearLayout>
