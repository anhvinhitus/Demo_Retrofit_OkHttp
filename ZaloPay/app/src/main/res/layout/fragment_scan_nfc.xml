<vn.com.vng.zalopay.ui.widget.WaveView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".scanners.nfc.ScanNFCFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scan_nfc_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:gravity="center_horizontal"
            android:text="Đặt điện thoại ở gần máy tính tiền để bắt đầu giao dịch"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/btn_read_nfc"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="@color/bg_btn_blue"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/Button.Default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/btn_emulate_nfc" />
        </LinearLayout>
    </LinearLayout>

</vn.com.vng.zalopay.ui.widget.WaveView>
