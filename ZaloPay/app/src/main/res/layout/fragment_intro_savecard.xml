<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_intro"
    android:orientation="vertical"
    tools:context=".linkcard.ui.IntroSaveCardFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_weight="0.0"
        android:background="@color/intro.line" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.0"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:gravity="center"
            android:paddingLeft="@dimen/spacing.medium"
            android:paddingRight="@dimen/spacing.medium"
            android:text="@string/btn_cancel"
            android:textColor="@color/white" />

        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="center"
            app:stl_clickable="false"
            app:stl_customTabTextLayoutId="@layout/custom_tab_circle_white"
            app:stl_dividerColor="@color/transparent"
            app:stl_dividerThickness="0dp"
            app:stl_indicatorColor="@color/white"
            app:stl_indicatorCornerRadius="6dp"
            app:stl_indicatorGravity="center"
            app:stl_indicatorInFront="true"
            app:stl_indicatorInterpolation="linear"
            app:stl_indicatorThickness="12dp"
            app:stl_underlineColor="@color/transparent"
            app:stl_underlineThickness="0dp" />

        <ImageView
            android:id="@+id/tvContinue"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:gravity="center"
            android:paddingLeft="@dimen/spacing.medium"
            android:paddingRight="@dimen/spacing.medium"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_right"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/tvClose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:gravity="center"
            android:paddingLeft="@dimen/spacing.medium"
            android:paddingRight="@dimen/spacing.medium"
            android:text="@string/txt_close"
            android:textColor="@color/white"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>
