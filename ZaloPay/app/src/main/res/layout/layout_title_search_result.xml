<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separate"
        android:background="@color/separate" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextView.SubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing.medium.t"
        android:layout_marginLeft="@dimen/spacing.medium"
        android:layout_marginTop="@dimen/spacing.medium.m"
        android:text="@string/search_friend"
        android:textSize="@dimen/personal_general_text_sub_l" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separate"
        android:background="@color/separate" />
</LinearLayout>