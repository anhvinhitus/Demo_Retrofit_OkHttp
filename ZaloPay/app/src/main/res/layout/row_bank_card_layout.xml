<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/root"
             android:layout_width="match_parent"
             android:layout_height="@dimen/link.card.height"
             android:layout_marginTop="@dimen/link.card.margin.top"
             android:background="@drawable/bg_link_card"
             android:baselineAligned="false">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_map"/>

    <FrameLayout
        android:id="@+id/vg_header"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:src="@drawable/ic_visa"/>

        <ImageView
            android:id="@+id/btn_more"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more_horiz"
            android:visibility="gone"/>
    </FrameLayout>

    <com.zalopay.ui.widget.IconFont
        android:id="@+id/tv_num_acc"
        style="@style/TextView.Default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="100dp"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize.card.number"
        android:textStyle="normal"
        app:typefaceAsset="ocr-a-tribute"
        tools:text="*** 0014"/>
</FrameLayout>