<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <vn.com.vng.zalopay.ui.widget.WaveView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/waveView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/height_tab_pay_with_margin"
        app:rb_color="#80ffffff"
        app:rb_duration="4000"
        app:rb_radius="72dp"
        app:rb_rippleAmount="1"
        app:rb_scale="2.4"
        app:rb_strokeWidth="4dp"
        app:rb_type="strokeRipple"
        tools:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnStartScanSound"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="@dimen/spacing.medium"
                android:text="@string/btn_start_scan_sound"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnStopScanSound"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="@dimen/spacing.medium"
                android:text="@string/btn_stop_scan_sound"
                android:visibility="gone" />
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_pay_sound" />

    </vn.com.vng.zalopay.ui.widget.WaveView>
</FrameLayout>