            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/spacing.medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/card" />

                <com.zalopay.ui.widget.IconFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/not_link_account"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/link.bank.empty.text.size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_add_account"
                style="@style/Button.Default.New"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button.height"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="@dimen/button.margin.bottom"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="horizontal">

