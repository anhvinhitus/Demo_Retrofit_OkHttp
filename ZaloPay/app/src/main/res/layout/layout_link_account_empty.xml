                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/spacing.tiny"
                        android:adjustViewBounds="true"
                        android:background="@drawable/bg_image_gray_border"
                        android:contentDescription="@string/loremipsum"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/vietcombank" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/link_account_iv_bank_support"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/link_account_tv_phone_require"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/link_account_empty_bank_support_phone_require_hint"
