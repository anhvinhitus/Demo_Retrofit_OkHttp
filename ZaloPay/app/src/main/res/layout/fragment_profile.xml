<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="vn.com.vng.zalopay.balancetopup.ui.fragment.BalanceTopupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:background="@drawable/ic_cover"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_border_white"
                        android:padding="4dp">

                        <vn.vng.uicomponent.widget.image.BezelImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="@dimen/leftmenu.avatar"
                            android:layout_height="@dimen/leftmenu.avatar"
                            android:scaleType="centerCrop"
                            app:borderDrawable="@color/transparent"
                            app:maskDrawable="@drawable/circle_mask" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/TextView.Default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing.tiny"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize.normal"
                        tools:text="@string/app_name" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/separate_stroke"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="24dp"
                    android:background="#42ffffff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:paddingLeft="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text="@string/gender"
                        android:textAllCaps="true"
                        android:textColor="#b2ffffff"
                        android:textSize="@dimen/textsize.tiny" />

                    <TextView
                        android:id="@+id/tvSex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize.normal.s"
                        tools:text="Nam" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing.tiny"
                        android:layout_marginTop="17dp"
                        android:gravity="left|center_vertical"
                        android:text="@string/birthday"
                        android:textAllCaps="true"
                        android:textColor="#b2ffffff"
                        android:textSize="@dimen/textsize.tiny" />

                    <TextView
                        android:id="@+id/tvBirthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing.tiny"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize.normal.s"
                        tools:text="01/12/2000" />
                </LinearLayout>
            </LinearLayout>

            <vn.vng.uicomponent.widget.viewpager.NonSwipeableViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTermsOfUser1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/spacing.medium"
                android:paddingRight="@dimen/spacing.medium"
                android:text="@string/terms_of_use_1"
                android:textColor="@color/deposit.title"
                android:textColorLink="@color/colorPrimary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvTermsOfUser2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/spacing.medium"
                android:paddingRight="@dimen/spacing.medium"
                android:paddingTop="@dimen/spacing.tiny"
                android:text="@string/terms_of_use_2"
                android:textColor="@color/deposit.title"
                android:textColorLink="@color/colorPrimary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvTermsOfUser3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/spacing.medium"
                android:paddingLeft="@dimen/spacing.medium"
                android:paddingRight="@dimen/spacing.medium"
                android:paddingTop="@dimen/spacing.tiny"
                android:text="@string/terms_of_use_3"
                android:textColor="@color/deposit.title"
                android:textColorLink="@color/colorPrimary"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_btn_blue"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/Button.Default"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="@string/btn_continue" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_padding"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@color/white" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
