<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/default_white_selector"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imgAvatar"
            style="@style/AvatarDraweeView"
            android:layout_width="@dimen/transfer.avatar"
            android:layout_height="@dimen/transfer.avatar"
            android:layout_marginBottom="@dimen/spacing.medium.t"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/spacing.medium.t"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="@dimen/spacing.medium.t"
            android:layout_marginTop="6dp"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDisplayName"
                style="@style/TextView.Item.Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="A.Hoanh"/>

            <TextView
                android:id="@+id/tvPhone"
                style="@style/TextView.Item.Sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0988888888"/>
        </LinearLayout>

        <com.zalopay.ui.widget.IconFont
            android:id="@+id/imgTransferType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing.medium"
            app:iconSize="@dimen/font_size_transfer_item"/>
    </LinearLayout>

    <View
        android:id="@+id/viewSeparate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separate_stroke"
        android:layout_marginLeft="60dp"
        android:background="@color/separate"/>
</LinearLayout>