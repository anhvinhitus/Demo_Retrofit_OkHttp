<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_header_main"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.zalopay.ui.widget.image.BezelImageView
        android:id="@+id/im_avatar"
        android:layout_width="@dimen/leftmenu.avatar"
        android:layout_height="@dimen/leftmenu.avatar"
        android:scaleType="centerCrop"
        app:borderDrawable="@drawable/circle_border_profile"
        app:maskDrawable="@drawable/circle_mask" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_padding"
        android:layout_weight="1.0"
        android:baselineAligned="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextView.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_large"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/tv_balance"
            style="@style/TextView.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing.tiny"
            android:text="0 VND"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_xlarge"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.0"
        android:src="@drawable/ic_arrow_right"
        android:tint="@color/white" />

</LinearLayout>
