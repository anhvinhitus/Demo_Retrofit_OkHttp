    <vn.vng.uicomponent.widget.image.BezelImageView
        android:id="@+id/im_avatar"
        android:layout_width="@dimen/leftmenu.avatar"
        android:layout_height="@dimen/leftmenu.avatar"
        android:scaleType="centerCrop"
        app:borderDrawable="@drawable/circle_border_profile"
        app:maskDrawable="@drawable/circle_mask" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextView.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize.normal.s"
            tools:text="@string/app_name" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_balance"
                style="@style/TextView.Default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize.normal.l"
                android:textStyle="bold" />

            <TextView
                style="@style/TextView.Default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="VNÄ"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize.small" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
