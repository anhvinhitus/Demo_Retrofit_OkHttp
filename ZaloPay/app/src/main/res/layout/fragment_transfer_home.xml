<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutTransferViaPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <com.zalopay.ui.widget.IconFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/app_padding"
                android:paddingLeft="@dimen/spacing.medium"
                android:paddingRight="@dimen/spacing.medium"
                android:paddingTop="@dimen/app_padding"
                android:textColor="@color/transfer_font_phone_number"
                app:iconName="@string/sendmoney_phonenumber"
                app:iconSize="@dimen/font_size_transfer_header" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextView.Item.Main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone.zalo.pay" />

                <TextView
                    style="@style/TextView.Item.Sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/phone.zalo.pay.content" />
            </LinearLayout>


            <com.zalopay.ui.widget.IconFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:textColor="@color/arrow_right"
                app:iconName="@string/general_arrowright"
                app:iconSize="12dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate_stroke"
            android:layout_marginLeft="60dp"
            android:background="@color/separate" />

        <LinearLayout
            android:id="@+id/layoutTransferContactList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <com.zalopay.ui.widget.IconFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/app_padding"
                android:paddingLeft="@dimen/spacing.medium"
                android:paddingRight="@dimen/spacing.medium"
                android:paddingTop="@dimen/app_padding"
                android:textColor="@color/transfer_font_contacts"
                app:iconName="@string/sendmoney_contacts"
                app:iconSize="@dimen/font_size_transfer_header" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextView.Item.Main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transfer.contact.list" />

                <TextView
                    style="@style/TextView.Item.Sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/transfer.contact.list.content" />
            </LinearLayout>


            <com.zalopay.ui.widget.IconFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:textColor="@color/arrow_right"
                app:iconName="@string/general_arrowright"
                app:iconSize="12dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate_stroke"
            android:layout_marginLeft="60dp"
            android:background="@color/separate" />

        <LinearLayout
            android:id="@+id/layoutTransferViaAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <com.zalopay.ui.widget.IconFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/app_padding"
                android:paddingLeft="@dimen/spacing.medium"
                android:paddingRight="@dimen/spacing.medium"
                android:paddingTop="@dimen/app_padding"
                android:textColor="@color/transfer_font_zalopay_id"
                app:iconName="@string/sendmoney_zalopayid"
                app:iconSize="@dimen/font_size_transfer_header" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextView.Item.Main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account.zalo.pay" />

                <TextView
                    style="@style/TextView.Item.Sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/transfer.zalo.pay.content" />
            </LinearLayout>


            <com.zalopay.ui.widget.IconFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:textColor="@color/arrow_right"
                app:iconName="@string/general_arrowright"
                app:iconSize="12dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate_stroke"
            android:background="@color/separate" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tvTileTransactionRecent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextView.Group.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing.small"
            android:paddingLeft="@dimen/spacing.medium"
            android:paddingTop="@dimen/spacing.large.t"
            android:text="@string/transaction_recent"
            android:textAllCaps="true"
            android:textSize="@dimen/personal_general_text_sub_l" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate_stroke"
            android:background="@color/separate" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layoutManager="LinearLayoutManager" />

    <View
        android:id="@+id/viewSeparate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separate_stroke"
        android:background="@color/separate"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layoutIntroduction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgIntroduction"
            android:layout_width="206dp"
            android:layout_height="147dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="@dimen/spacing.large"
            android:text="@string/transfer_money_note" />
    </LinearLayout>
</LinearLayout>