<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zalopay.ui.widget.IconFontTextView
            android:id="@+id/layoutTransferViaPhoneNumber"
            style="@style/TextView.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_white_selector"
            android:drawablePadding="@dimen/app_padding"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/app_padding"
            android:paddingLeft="@dimen/spacing.medium"
            android:paddingRight="@dimen/spacing.medium"
            android:paddingTop="@dimen/app_padding"
            android:text="@string/phone.zalo.pay"
            android:textColor="@color/txt_item_main"
            android:textSize="@dimen/personal_general_text_main"
            app:iconLeftColor="@color/menu_font_ic_green"
            app:iconLeftName="@string/sendmoney_zalopayid"
            app:iconLeftSize="@dimen/font_size_transfer_header"
            app:iconRightColor="@color/arrow_right"
            app:iconRightName="@string/general_arrowright"
            app:iconRightSize="@dimen/font_size_arrow_right" />

        <com.zalopay.ui.widget.IconFontTextView
            android:id="@+id/layoutTransferViaAccount"
            style="@style/TextView.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_white_selector"
            android:drawablePadding="@dimen/app_padding"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/app_padding"
            android:paddingLeft="@dimen/spacing.medium"
            android:paddingRight="@dimen/spacing.medium"
            android:paddingTop="@dimen/app_padding"
            android:text="@string/account.zalo.pay"
            android:textColor="@color/txt_item_main"
            android:textSize="@dimen/personal_general_text_main"
            app:iconLeftColor="@color/menu_font_ic_green"
            app:iconLeftName="@string/sendmoney_zalopayid"
            app:iconLeftSize="@dimen/font_size_transfer_header"
            app:iconRightColor="@color/arrow_right"
            app:iconRightName="@string/general_arrowright"
            app:iconRightSize="@dimen/font_size_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate_stroke"
            android:layout_marginLeft="60dp"
            android:background="@color/separate" />

        <com.zalopay.ui.widget.IconFontTextView
            android:id="@+id/layoutTransferAccZaloPay"
            style="@style/TextView.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_white_selector"
            android:drawablePadding="@dimen/app_padding"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/app_padding"
            android:paddingLeft="@dimen/spacing.medium"
            android:paddingRight="@dimen/spacing.medium"
            android:paddingTop="@dimen/app_padding"
            android:text="@string/transfer_acc_zalopay"
            android:textColor="@color/txt_item_main"
            android:textSize="@dimen/personal_general_text_main"
            app:iconLeftColor="@color/menu_font_ic_blue"
            app:iconLeftName="@string/sendmoney_friend"
            app:iconLeftSize="@dimen/font_size_transfer_header"
            app:iconRightColor="@color/arrow_right"
            app:iconRightName="@string/general_arrowright"
            app:iconRightSize="@dimen/font_size_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate_stroke"
            android:background="@color/separate" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tvTileTransactionRecent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextView.Group.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing.small"
            android:paddingLeft="@dimen/spacing.medium"
            android:paddingTop="@dimen/spacing.large.t"
            android:text="@string/transaction_recent"
            android:textAllCaps="true"
            android:textSize="@dimen/personal_general_text_sub_l" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate_stroke"
            android:background="@color/separate" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layoutManager="LinearLayoutManager" />

    <View
        android:id="@+id/viewSeparate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separate_stroke"
        android:background="@color/separate"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layoutIntroduction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgIntroduction"
            android:layout_width="206dp"
            android:layout_height="147dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="@dimen/spacing.large"
            android:text="@string/transfer_money_note" />
    </LinearLayout>
</LinearLayout>