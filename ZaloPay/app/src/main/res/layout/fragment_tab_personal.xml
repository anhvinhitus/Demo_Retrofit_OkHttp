<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tab_personal_rl_info"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/white">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/tab_personal_iv_avatar"
            style="@style/AvatarDraweeView"
            android:layout_width="@dimen/personal.avatar"
            android:layout_height="@dimen/personal.avatar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/personal.margin"
            app:roundingBorderColor="@color/leftmenu.avatar.bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/personal.margin"
            android:layout_toRightOf="@+id/tab_personal_iv_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tab_personal_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/personal_text"
                android:textSize="@dimen/personal.name" />

            <TextView
                android:id="@+id/tab_personal_tv_zalopayid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/personal_zalopayid"
                android:textSize="@dimen/personal.zalopayid" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tab_personal_ll_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/personal.margin"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/tab_personal_rl_balance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal.menu_item_height"
            android:background="@drawable/default_white_selector">

            <com.zalopay.ui.widget.IconFontTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/personal.margin"
                android:layout_marginRight="@dimen/personal.margin"
                android:gravity="center_vertical"
                android:text="Số dư"
                android:textColor="@color/personal_text"
                android:textSize="@dimen/personal.iconfont.text"
                app:iconLeftColor="@color/personal_ic_balance"
                app:iconLeftName="@string/header_overbalance"
                app:iconLeftPadding="@dimen/personal.margin"
                app:iconLeftSize="@dimen/personal.iconfont"
                app:iconRightColor="@color/arrow_right"
                app:iconRightName="@string/general_arrowright"
                app:iconRightSize="@dimen/font_size_arrow_right" />

            <TextView
                android:id="@+id/tab_personal_tv_balance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="36dp"
                android:textColor="@color/personal_text"
                android:textSize="@dimen/personal.balance" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="44dp"
            android:background="@color/separate" />

        <RelativeLayout
            android:id="@+id/tab_personal_rl_bank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal.menu_item_height">

            <com.zalopay.ui.widget.IconFontTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/personal.margin"
                android:layout_marginRight="@dimen/personal.margin"
                android:gravity="center_vertical"
                android:text="Ngân Hàng"
                android:textColor="@color/personal_text"
                android:textSize="@dimen/personal.iconfont.text"
                app:iconLeftColor="@color/personal_ic_bank"
                app:iconLeftName="@string/header_linkbank"
                app:iconLeftPadding="@dimen/personal.margin"
                app:iconLeftSize="@dimen/personal.iconfont"
                app:iconRightColor="@color/arrow_right"
                app:iconRightName="@string/general_arrowright"
                app:iconRightSize="@dimen/font_size_arrow_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="36dp"
                android:text="Liên kết ngay"
                android:textColor="@color/personal_ic_link"
                android:textSize="@dimen/personal.link.text" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="44dp"
            android:background="@color/separate" />

        <RelativeLayout
            android:id="@+id/tab_personal_rl_bill"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal.menu_item_height">

            <com.zalopay.ui.widget.IconFontTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/personal.margin"
                android:layout_marginRight="@dimen/personal.margin"
                android:gravity="center_vertical"
                android:text="Hoá Đơn"
                android:textColor="@color/personal_text"
                android:textSize="@dimen/personal.iconfont.text"
                app:iconLeftColor="@color/personal_ic_bill"
                app:iconLeftName="@string/menu_history"
                app:iconLeftPadding="@dimen/personal.margin"
                app:iconLeftSize="@dimen/personal.iconfont"
                app:iconRightColor="@color/arrow_right"
                app:iconRightName="@string/general_arrowright"
                app:iconRightSize="@dimen/font_size_arrow_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="36dp"
                android:text="Xem chi tiết"
                android:textColor="@color/personal_ic_link"
                android:textSize="@dimen/personal.link.text" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="44dp"
            android:background="@color/separate" />

        <RelativeLayout
            android:id="@+id/tab_personal_rl_transaction_history"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal.menu_item_height"
            android:background="@drawable/default_white_selector">

            <com.zalopay.ui.widget.IconFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/personal.margin"
                android:layout_marginRight="@dimen/personal.margin"
                android:text="Lịch Sử Giao Dịch"
                android:textColor="@color/personal_text"
                android:textSize="@dimen/personal.iconfont.text"
                app:iconLeftColor="@color/personal_ic_trans_history"
                app:iconLeftName="@string/menu_history"
                app:iconLeftPadding="@dimen/personal.margin"
                app:iconLeftSize="@dimen/personal.iconfont"
                app:iconRightColor="@color/arrow_right"
                app:iconRightName="@string/general_arrowright"
                app:iconRightSize="@dimen/font_size_arrow_right" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_personal_ll_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/personal.margin"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zalopay.ui.widget.IconFontTextView
            android:id="@+id/tab_personal_tv_support_center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal.menu_item_height"
            android:background="@drawable/default_white_selector"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/personal.margin"
            android:paddingRight="@dimen/personal.margin"
            android:text="Trung Tâm Hỗ Trợ"
            android:textColor="@color/txt_item_main"
            android:textSize="@dimen/personal.iconfont.text"
            app:iconLeftColor="@color/personal_ic_support"
            app:iconLeftName="@string/menu_supportcenter"
            app:iconLeftPadding="@dimen/personal.margin"
            app:iconLeftSize="@dimen/personal.iconfont"
            app:iconRightColor="@color/arrow_right"
            app:iconRightName="@string/general_arrowright"
            app:iconRightSize="@dimen/font_size_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="44dp"
            android:background="@color/separate" />

        <com.zalopay.ui.widget.IconFontTextView
            android:id="@+id/tab_personal_tv_quick_feedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal.menu_item_height"
            android:background="@drawable/default_white_selector"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/personal.margin"
            android:paddingRight="@dimen/personal.margin"
            android:text="Góp Ý Nhanh"
            android:textColor="@color/txt_item_main"
            android:textSize="@dimen/personal.iconfont.text"
            app:iconLeftColor="@color/personal_ic_support"
            app:iconLeftName="@string/menu_feedback"
            app:iconLeftPadding="@dimen/personal.margin"
            app:iconLeftSize="@dimen/personal.iconfont"
            app:iconRightColor="@color/arrow_right"
            app:iconRightName="@string/general_arrowright"
            app:iconRightSize="@dimen/font_size_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="44dp"
            android:background="@color/separate" />

        <com.zalopay.ui.widget.IconFontTextView
            android:id="@+id/tab_personal_tv_app_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal.menu_item_height"
            android:background="@drawable/default_white_selector"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/personal.margin"
            android:paddingRight="@dimen/personal.margin"
            android:text="Thông Tin Ứng Dụng"
            android:textColor="@color/txt_item_main"
            android:textSize="@dimen/personal.iconfont.text"
            app:iconLeftColor="@color/personal_ic_support"
            app:iconLeftName="@string/menu_infomation"
            app:iconLeftPadding="@dimen/personal.margin"
            app:iconLeftSize="@dimen/personal.iconfont"
            app:iconRightColor="@color/arrow_right"
            app:iconRightName="@string/general_arrowright"
            app:iconRightSize="@dimen/font_size_arrow_right" />

    </LinearLayout>

    <TextView
        android:id="@+id/tab_personal_tv_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal.menu_item_height"
        android:layout_marginTop="@dimen/personal.margin"
        android:background="@drawable/default_white_selector"
        android:gravity="center"
        android:text="Đăng Xuất"
        android:textColor="@color/txt_item_main"
        android:textSize="@dimen/personal.iconfont.text" />

</LinearLayout>