<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutUser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/spacing.medium.l"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    app:layout_collapseMode="parallax"
    tools:background="@color/colorPrimary">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_border_white_alpha"
        android:padding="4dp">

        <com.zalopay.ui.widget.image.BezelImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/leftmenu.avatar"
            android:layout_height="@dimen/leftmenu.avatar"
            android:scaleType="centerCrop"
            app:borderDrawable="@color/transparent"
            app:maskDrawable="@drawable/circle_mask"/>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/layoutProfileInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/app_padding"
        android:baselineAligned="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextView.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_large"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/tvZaloPayName"
            style="@style/TextView.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing.tiny"
            android:text="@string/zalopay_name_not_update"
            android:textColor="@color/txt_item_sub_2"
            android:textSize="@dimen/font_size_medium"/>

        <TextView
            android:id="@+id/tv_balance"
            style="@style/TextView.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing.tiny"
            android:text="0 VND"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_xlarge"
            android:visibility="gone"/>

    </LinearLayout>
</LinearLayout>