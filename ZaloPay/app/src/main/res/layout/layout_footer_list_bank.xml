<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/spacing.medium.t"
              android:layout_marginEnd="16dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:layout_marginStart="16dp"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/btn_add_more"
        style="@style/Button.Default.New"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button.height"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="@dimen/button.margin.top.min"
        android:orientation="horizontal">

        <com.zalopay.ui.widget.IconFontTextView
            style="@style/IconFontText.IconLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/link.card.more"
            app:iconLeftName="@string/linkaccount_add"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="40dp"
            android:contentDescription="@string/loremipsum"
            android:scaleType="centerInside"
            android:src="@drawable/ic_chungchi"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing.medium.s"
            android:lineSpacingExtra="3dp"
            android:text="@string/secure_info_detail"
            android:textColor="@color/txt_item_sub"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>