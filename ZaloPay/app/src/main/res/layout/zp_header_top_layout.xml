<?xml version="1.0" encoding="utf-8"?>
<vn.com.vng.zalopay.ui.toolbar.HeaderViewTop xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/header_top_rl_search_view"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/header_top_rl_notification">

                <com.zalopay.ui.widget.IconFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/zpw_padding_8"
                    android:paddingRight="@dimen/zpw_padding_8"
                    android:text="@string/search"
                    android:textColor="@color/white_transparent_3"
                    app:iconRightColor="@color/white_transparent_3"
                    app:iconRightName="@string/general_search"
                    app:iconRightSize="12dp" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/header_top_rl_collapsed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/header_top_rl_notification"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.zalopay.ui.widget.IconFont
                    android:id="@+id/header_view_top_qrcode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/spacing.medium.s"
                    android:textColor="@color/white"
                    app:iconName="@string/header_payqrcode"
                    app:iconSize="30dp" />

                <com.zalopay.ui.widget.IconFont
                    android:id="@+id/header_view_top_linkbank"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/spacing.medium.s"
                    android:textColor="@color/white"
                    app:iconName="@string/header_linkbank"
                    app:iconSize="30dp" />

                <com.zalopay.ui.widget.IconFont
                    android:id="@+id/header_view_top_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing.medium.s"
                    android:textColor="@color/white"
                    app:iconName="@string/header_search"
                    app:iconSize="30dp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/header_top_rl_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <include layout="@layout/notification_menu_item" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/header_top_rl_personal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/back_ground_blue"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtTitle"
                style="@style/Toolbar.TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/spacing.medium"
                android:layout_marginRight="@dimen/spacing.small"
                android:text="Cá nhân" />
        </RelativeLayout>

    </FrameLayout>

</vn.com.vng.zalopay.ui.toolbar.HeaderViewTop>