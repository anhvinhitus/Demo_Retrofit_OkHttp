<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zalopay="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/spacing.medium.s"
        android:paddingRight="@dimen/spacing.medium.s"
        android:paddingTop="@dimen/spacing.medium.s">

        <vn.com.vng.zalopay.ui.widget.PassCodeView
            android:id="@+id/passcodeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="6"
            zalopay:hint="Mã số PIN mới"
            zalopay:length="6" />

        <vn.com.vng.zalopay.ui.widget.PassCodeView
            android:id="@+id/oldPassCodeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="6"
            zalopay:hint="@string/hint_pin"
            zalopay:length="6" />


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>