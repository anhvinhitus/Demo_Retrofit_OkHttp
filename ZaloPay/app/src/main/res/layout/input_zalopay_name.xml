<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputZaloPayName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing.small"
        app:errorEnabled="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtZaloPayName"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/transparent"
            android:ellipsize="end"
            android:hint="@string/hint_zalopay_name"
            android:inputType="textNoSuggestions|textVisiblePassword|textCapWords"
            android:maxLength="24"
            android:maxLines="1"
            android:paddingTop="@dimen/spacing.small"
            android:singleLine="true"
            android:textColorHint="@color/hint" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imgInfo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end|center_vertical"
        android:adjustViewBounds="true"
        android:contentDescription="@string/loremipsum"
        android:padding="14dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_info"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvCheck"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|bottom"
        android:gravity="center"
        android:paddingBottom="@dimen/app_padding"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="@dimen/app_padding"
        android:text="@string/text_check"
        android:textColor="@color/txt_check_disable"
        android:textSize="@dimen/textsize.normal.s"
        android:visibility="visible" />

</LinearLayout>
