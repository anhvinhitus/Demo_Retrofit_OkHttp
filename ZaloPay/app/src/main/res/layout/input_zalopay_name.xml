<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputZaloPayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing.small"
        app:errorEnabled="false">

        <EditText
            android:id="@+id/edtZaloPayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:ellipsize="end"
            android:hint="@string/hint_zalopay_name"
            android:inputType="text"
            android:maxLength="24"
            android:maxLines="1"
            android:paddingTop="@dimen/spacing.small"
            android:singleLine="true"
            android:textColorHint="@color/hint" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imgInfo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end|center_vertical"
        android:adjustViewBounds="true"
        android:contentDescription="@string/loremipsum"
        android:scaleType="center"
        android:src="@drawable/ic_info"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvCheck"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|bottom"
        android:padding="@dimen/app_padding"
        android:text="@string/text_check"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/textsize.normal.s"
        android:visibility="gone" />

</FrameLayout>
