<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:baselineAligned="false"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separate_stroke"
                android:background="@color/separate" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white">

                <com.zalopay.ui.widget.edittext.ZPEditText
                    android:id="@+id/edtAccountName"
                    style="@style/ZaloPayEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:hint="@string/input.account.zalo.pay"
                    android:inputType="textNoSuggestions|textVisiblePassword|textEmailAddress"
                    android:maxLength="@integer/max_length_zalopay_name" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separate"
                android:background="@color/separate" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/btn_continue_bottom_layout" />
</RelativeLayout>
