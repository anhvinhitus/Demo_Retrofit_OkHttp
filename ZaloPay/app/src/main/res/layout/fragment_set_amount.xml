<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:baselineAligned="false"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separate"
                android:background="@color/separate" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                app:hintAnimationEnabled="false">

                <vn.com.vng.zalopay.ui.widget.ClearableEditText
                    android:id="@+id/edtAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="@string/amount"
                    android:inputType="numberDecimal"
                    android:maxLength="@integer/max_length_edittext_money"
                    android:maxLines="1"
                    android:minHeight="44dp"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separate"
                android:layout_marginLeft="16dp"
                android:background="@color/separate" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                app:errorEnabled="false"
                app:hintAnimationEnabled="false">

                <vn.com.vng.zalopay.ui.widget.ClearableEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="@string/note"
                    android:inputType="text"
                    android:maxLength="36"
                    android:maxLines="2"
                    android:minHeight="44dp"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separate"
                android:background="@color/separate" />
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnUpdate"
        style="@style/Button.Default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_btn_blue"
        android:minWidth="120dp"
        android:singleLine="false"
        android:text="@string/btn_update" />
</FrameLayout>
