<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing.medium.t"
            android:src="@drawable/ic_seach" />

        <vn.com.vng.zalopay.ui.widget.ClearableEditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ellipsize="end"
            android:hint="@string/hint_zalo_contact"
            android:lines="1"
            android:paddingBottom="@dimen/spacing.medium"
            android:paddingLeft="@dimen/spacing.medium.t"
            android:paddingRight="@dimen/spacing.medium"
            android:paddingTop="@dimen/spacing.medium"
            android:singleLine="true"
            android:textColorHint="@color/hint"
            android:textSize="@dimen/textsize.small" />
    </LinearLayout>

    <View
        android:id="@+id/edtSeparate"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/txt_bottom_default_style" />

    <include
        layout="@layout/fragment_pull_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>