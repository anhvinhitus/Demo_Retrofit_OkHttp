<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.zalopay.ui.widget.image.BezelImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/transfer.avatar"
            android:layout_height="@dimen/transfer.avatar"
            android:layout_marginBottom="@dimen/spacing.medium.t"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/spacing.medium.t"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_avatar_default"
            app:borderDrawable="@color/transparent"
            app:maskDrawable="@drawable/circle_mask" />

        <TextView
            android:id="@+id/tvDisplayName"
            style="@style/TextView.Item.Main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1.0"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="A.Hoanh" />


        <TextView
            android:id="@+id/tvAmount"
            style="@style/TextView.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            tools:text="10.000VND" />


    </LinearLayout>

    <View
        android:id="@+id/viewSeparate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separate_stroke"
        android:layout_marginLeft="54dp"
        android:background="@color/separate" />
</LinearLayout>