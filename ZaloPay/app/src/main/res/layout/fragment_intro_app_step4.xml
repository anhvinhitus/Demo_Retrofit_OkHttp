<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1.0"
              tools:context=".ui.fragment.IntroSaveCardFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.34" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:contentDescription="@string/loremipsum"
            android:scaleType="center"
            android:layout_marginBottom="@dimen/spacing.medium"
            android:src="@drawable/ic_intro_app_step4"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.66"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/Intro.TextView.Title"
            android:text="@string/intro.app.title.step4"/>

        <TextView
            style="@style/Intro.TextView.Content"
            android:text="@string/intro.app.content.step4"/>
    </LinearLayout>
</LinearLayout>
