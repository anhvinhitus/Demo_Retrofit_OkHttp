<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutNoResultFound"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/spacing.medium">

    <TextView
        android:id="@+id/search_result_emty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:drawablePadding="28dp"
        android:drawableTop="@drawable/ic_search_emty"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:lineSpacingExtra="@dimen/spacing.small.t"
        android:textSize="@dimen/font_size_xlarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/spacing.medium"
        android:text="@string/search_no_result_description" />
</LinearLayout>
