<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="16dp">


    <FrameLayout
        android:id="@+id/layoutQrCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:padding="16dp">

        <TextView
            style="@style/TextView.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="false"
            android:text="Quét mã QR để chuyển tiền cho tôi mà không cần kết bạn" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="48dp"
            android:layout_marginTop="48dp">

            <include layout="@layout/progress" />

            <ImageView
                android:id="@+id/imageViewQrCode"
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true" />


            <com.zalopay.ui.widget.image.BezelImageView
                android:id="@+id/imageAvatar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:borderDrawable="@drawable/circle_border_white"
                app:maskDrawable="@drawable/circle_mask" />

        </FrameLayout>


        <!-- <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="bottom"
             android:gravity="center_vertical"
             android:orientation="horizontal">

             <com.zalopay.ui.widget.image.BezelImageView
                 android:id="@+id/imageAvatarSender"
