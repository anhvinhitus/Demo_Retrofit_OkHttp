<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutQrCode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    android:visibility="visible">

    <TextView
        style="@style/TextView.SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:singleLine="false"
        android:text="Quét mã QR để chuyển tiền cho tôi mà không cần kết bạn"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tvAmount"
        style="@style/TextView.Title"
        tools:text="1.000 VND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:singleLine="false"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/tvMessage"
        style="@style/TextView.Title"
        tools:text="Nhận tiền nhé!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:singleLine="false"
        android:textSize="16dp" />


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="72dp"
        android:layout_marginTop="28dp">

        <include layout="@layout/progress" />

        <ImageView
            android:id="@+id/imageViewQrCode"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true" />


        <com.zalopay.ui.widget.image.BezelImageView
            android:id="@+id/imageAvatar"
            app:borderDrawable="@drawable/circle_border_white"
            app:maskDrawable="@drawable/circle_mask"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

    </FrameLayout>


</LinearLayout>