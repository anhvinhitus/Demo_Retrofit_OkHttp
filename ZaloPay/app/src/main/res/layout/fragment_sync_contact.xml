<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?selector"
        android:clickable="true">

        <com.zalopay.ui.widget.IconFont
            android:id="@+id/avatarContact"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:textColor="@color/blue.008fe5"
            app:iconName="@string/ct_list_danhba"
            app:iconSize="32dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/avatarContact"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/TextView.Item.Sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friend.from.contact.book"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvPermission"
                style="@style/TextView.Item.Sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/you.have.not.yet.enabled.access"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/countUcb"
            style="@style/TextView.Item.Sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="0"
            android:textSize="14sp"
            tools:ignore="HardcodedText"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?selector"
        android:clickable="true">

        <com.zalopay.ui.widget.IconFont
            android:id="@+id/avatarZaloGroup"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:textColor="@color/blue.008fe5"
            app:iconName="@string/ct_list_zalo"
            app:iconSize="32dp"/>

        <TextView
            style="@style/TextView.Item.Sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/avatarZaloGroup"
            android:layout_toRightOf="@+id/avatarZaloGroup"
            android:text="@string/friend.from.zalo"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/countZfl"
            style="@style/TextView.Item.Sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="0"
            android:textSize="14sp"
            tools:ignore="HardcodedText"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separate"
        android:layout_marginLeft="16dp"
        android:background="@color/separate"/>

    <TextView
        style="@style/TextView.Item.Sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:maxLines="2"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:singleLine="false"
        android:text="@string/description.sync.contact.list"/>

    <TextView
        style="@style/TextView.Item.Sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/last.sync.contact"/>

    <TextView
        android:id="@+id/tvTimeUpdate"
        style="@style/TextView.Item.Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="10/07/2017 16:30"/>

    <Button
        android:id="@+id/btnUpdate"
        style="@style/Button.Default"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/btn_round_selector"
        android:drawablePadding="8dp"
        android:text="@string/btn_update"/>

</LinearLayout>