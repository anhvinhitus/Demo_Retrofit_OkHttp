<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="@dimen/intro.app.top.weight">

        <ImageView
            style="@style/IntroImage"
            android:src="@drawable/ic_intro_app_step1" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="@dimen/intro.app.bottom.weight"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/Intro.TextView.Title"
            android:text="@string/intro.app.title.step1" />

        <TextView
            style="@style/Intro.TextView.Content"
            android:text="@string/intro.app.content.step1" />
    </LinearLayout>
</LinearLayout>
