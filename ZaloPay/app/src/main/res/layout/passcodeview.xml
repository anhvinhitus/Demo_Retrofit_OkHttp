<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textSize="@dimen/textsize.tiny"
        android:visibility="visible" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacing.small"
            app:errorEnabled="false">

            <EditText
                android:id="@+id/editText"
                style="@style/Passcode.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_passcode"
                android:clickable="@null"
                android:cursorVisible="false"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:longClickable="@null"
                android:maxLines="1"
                android:singleLine="true">

                <requestFocus />
            </EditText>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|top"
                android:layout_marginBottom="@dimen/spacing.medium"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1.0"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/tvShowHide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.0"
                android:gravity="center_vertical|right"
                android:padding="@dimen/app_padding"
                android:text="@string/show"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textsize.normal.s" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tvNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing.tiny"
        android:textSize="@dimen/textsize.tiny"
        android:visibility="gone" />
</LinearLayout>