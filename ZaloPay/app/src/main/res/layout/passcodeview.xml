<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvHint"
        style="@style/TextView.SubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize.tiny" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingTop="10dp"
            app:errorEnabled="false">

            <EditText
                android:id="@+id/editText"
                style="@style/Passcode.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_bottom_default_style"
                android:clickable="true"
                android:cursorVisible="false"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:longClickable="false"
                android:maxLength="@integer/pin_length"
                android:maxLines="1"
                android:singleLine="true">

                <requestFocus />
            </EditText>
        </android.support.design.widget.TextInputLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="68dp"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" />

            <Button
                android:id="@+id/tvShowHide"
                style="@style/Button.Default"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:background="@null"
                android:gravity="center"
                android:minHeight="0px"
                android:minWidth="0px"
                android:padding="@dimen/app_padding"
                android:text="@string/show"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textsize.normal.s" />
        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tvNote"
        style="@style/TextView.SubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="@dimen/textsize.tiny"
        android:visibility="invisible" />
</LinearLayout>