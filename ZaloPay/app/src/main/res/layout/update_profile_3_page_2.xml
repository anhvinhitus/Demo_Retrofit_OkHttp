<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <TextView
            style="@style/TextView.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:singleLine="false"
            android:text="@string/lbl.update.profile.3.page.2"
            android:textSize="14dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate"
            android:background="@color/separate"/>

        <FrameLayout
            android:id="@+id/layoutFgCmnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_white_selector"
            android:minHeight="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/tvFgCmnd"
                style="@style/TextView.SubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/lbl.identify.front"
                android:textSize="14dp"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/ivFgCmnd"
                style="@style/NormalDraweeView"
                android:layout_width="90dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/btnRemoveFrontCmnd"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|right"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_camera"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate"
            android:layout_marginLeft="16dp"
            android:background="@color/separate"/>

        <FrameLayout
            android:id="@+id/layoutBgCmnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_white_selector"
            android:minHeight="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/ivBgCmnd"
                style="@style/NormalDraweeView"
                android:layout_width="90dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvBgCmnd"
                style="@style/TextView.SubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/lbl.identify.back"
                android:textSize="14dp"/>

            <ImageView
                android:id="@+id/btnRemoveBackCmnd"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|right"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_camera"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate"
            android:background="@color/separate"/>

        <TextView
            style="@style/TextView.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:singleLine="false"
            android:text="@string/lbl.recommend.upload.avatar"
            android:textSize="14dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate"
            android:background="@color/separate"/>

        <FrameLayout
            android:id="@+id/layoutAvatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_white_selector"
            android:minHeight="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar"
                style="@style/NormalDraweeView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvAvatar"
                style="@style/TextView.SubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Ảnh của bạn"
                android:textSize="14dp"/>

            <ImageView
                android:id="@+id/btnRemoveAvatar"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|right"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_camera"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separate"
            android:background="@color/separate"/>

        <Button
            android:id="@+id/btnConfirm"
            style="@style/Button.Default.New"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button.height"
            android:layout_marginTop="@dimen/button.margin.top.min"
            android:text="@string/btn_confirm"/>
    </LinearLayout>
</ScrollView>
