<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/contact_selector"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/padding_large"
        android:layout_marginLeft="@dimen/padding_large"
        android:layout_marginRight="@dimen/padding_large"
        android:layout_marginStart="@dimen/padding_large"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imgAvatar"
            style="@style/AvatarDraweeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <include layout="@layout/text_place_holder"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/logo"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="bottom|right"
            app:actualImageResource="@drawable/dot_zp"
            tools:background="@drawable/dot_zp"
            tools:ignore="RtlHardcoded"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDisplayName"
            style="@style/TextView.Item.Main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="A.Hoanh"/>

        <TextView
            android:id="@+id/tvPhone"
            style="@style/TextView.Item.Sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            tools:text="0966 888 888"/>

    </LinearLayout>

</LinearLayout>

