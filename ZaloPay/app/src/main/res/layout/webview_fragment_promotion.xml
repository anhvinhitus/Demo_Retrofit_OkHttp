<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/webapp_header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/back_ground_blue">

        <LinearLayout
            android:id="@+id/promotion_btn_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone">

            <com.zalopay.ui.widget.IconFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing.medium"
                android:textColor="@color/white"
                app:iconName="@string/general_backandroid"
                app:iconSize="@dimen/font_size_toolbar_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/promotion_tv_title"
            style="@style/Toolbar.TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/promotion_btn_share"
            android:layout_toRightOf="@+id/promotion_btn_back"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="@string/promotion_title" />

        <LinearLayout
            android:id="@+id/promotion_btn_share"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:visibility="gone">

            <com.zalopay.ui.widget.IconFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing.medium"
                android:textColor="@color/white"
                app:iconName="@string/webapp_3point_android"
                app:iconSize="@dimen/font_size_toolbar_icon" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/bg_progressbar_webapp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/progressBar">

            <include
                layout="@layout/layout_retry_with_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.zalopay.ui.widget.MultiSwipeRefreshLayout
                android:id="@+id/promotion_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <vn.com.vng.zalopay.webview.widget.ZPWebView
                    android:id="@+id/promotion_webview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.zalopay.ui.widget.MultiSwipeRefreshLayout>
        </FrameLayout>

    </RelativeLayout>

</LinearLayout>
