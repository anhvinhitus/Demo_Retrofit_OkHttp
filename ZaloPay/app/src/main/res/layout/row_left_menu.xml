<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?selector">

    <com.zalopay.ui.widget.IconFontTextView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/app_padding"
        android:paddingLeft="@dimen/app_padding"
        android:paddingTop="@dimen/app_padding"
        android:drawablePadding="@dimen/app_padding"
        app:iconLeftSize="@dimen/font_size_menu" />

    <View
        android:id="@+id/viewSeparate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separate"
        android:layout_gravity="bottom"
        android:layout_marginLeft="48dp"
        android:background="@color/separate" />
</FrameLayout>