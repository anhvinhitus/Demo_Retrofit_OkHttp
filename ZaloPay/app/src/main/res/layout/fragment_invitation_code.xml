<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="90dp"
                android:src="@drawable/ic_invitation_code" />

            <TextView
                android:id="@+id/lb_invite"
                style="@style/TextView.SubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/label_invitation_code"
                android:textSize="16dp" />

            <vn.com.zalopay.wallet.view.custom.pinview.GridPasswordView
                android:id="@+id/passCodeInput"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                app:gpvGridColor="#ffffff"
                app:gpvLineColor="#858585"
                app:gpvLineWidth="1dp"
                app:gpvPasswordLength="@integer/invitation_code_length"
                app:gpvPasswordType="numberPassword"
                app:gpvTextColor="#000000"
                app:gpvTextSize="20sp" />


        </FrameLayout>
    </ScrollView>

    <vn.vng.uicomponent.widget.button.GuardButton
        android:id="@+id/btnContinue"
        style="@style/Button.Default"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_btn_blue"
        android:text="Xác nhận" />
</FrameLayout>