<?xml version="1.0" encoding="utf-8"?>
<com.zalopay.ui.widget.KeyboardFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="56dp">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="190dp"
                android:layout_height="209dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_invitation_code" />

            <TextView
                android:id="@+id/lb_invite"
                style="@style/TextView.SubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:autoLink="email"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/label_invitation_code"
                android:textColor="@color/txt_item_sub"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/passCodeInput"
                style="@style/EditText.Default"
                android:layout_width="278dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_border_invitation"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="@integer/invitation_code_length"
                android:scrollbars="none"
                android:textSize="18dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnContinue"
        style="@style/Button.Default"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button.height"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_btn_blue"
        android:text="@string/confirm" />

</com.zalopay.ui.widget.KeyboardFrameLayout>