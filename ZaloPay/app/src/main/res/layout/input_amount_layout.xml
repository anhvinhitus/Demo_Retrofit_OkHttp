<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutAmount"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvHintInputAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing.medium"
        android:layout_weight="1.0"
        android:clickable="false"
        android:text="@string/input_amount"
        android:textColor="@color/hint"
        android:textSize="@dimen/textsize.normal" />

    <LinearLayout
        android:id="@+id/layoutInputAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing.medium"
        android:layout_weight="1.0"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvAmountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount"
                android:textColor="@color/text_green"
                android:textSize="@dimen/textsize.small" />

            <TextView
                android:id="@+id/tvCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing.tiny"
                android:text="@string/amount_vnd"
                android:textColor="@color/text_green"
                android:textSize="@dimen/textsize.tiny" />
        </LinearLayout>

            <EditText
                android:id="@+id/edtAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing.tiny.s"
                android:background="@color/transparent"
                android:hint="0"
                android:inputType="number"
                android:maxLength="17"
                android:textColor="@color/amount_edt"
                android:textSize="@dimen/textsize.normal"
                tools:text="10.000" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgClear"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_weight="0.0"
        android:scaleType="centerInside"
        android:src="@drawable/ic_remove_circle"
        android:visibility="gone" />
</LinearLayout>