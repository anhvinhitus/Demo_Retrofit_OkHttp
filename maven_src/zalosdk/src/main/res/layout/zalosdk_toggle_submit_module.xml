<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/payment_group_button_submit_height" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c7ccdd"
        android:visibility="gone" />

    <ToggleButton
        android:id="@+id/zalosdk_ok_ctl"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/payment_button_submit_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/zalosdk_togglebutton_background"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:textColor="#fff"
        android:textOff="@string/zalosdk_submit"
        android:textOn="@string/zalosdk_submit"
        android:textSize="@dimen/payment_button_submit_text_size" />

</RelativeLayout>