<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zalosdk_background_rectangle_corner_blue_background"
        android:orientation="vertical" >

        <include layout="@layout/payment_method_container" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/zalosdk_border_bottom_right" >

            <include
                android:id="@+id/zalosdk_header"
                layout="@layout/zalosdk_header" />

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/payment_group_button_submit_height"
                android:layout_toRightOf="@id/zalosdk_header"
                android:fillViewport="true"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/view_root"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="7dip" >

                        <RelativeLayout
                            android:id="@+id/autofill_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" >

                            <LinearLayout
                                android:id="@+id/autofill_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/zalosdk_autofill_top_left"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:layout_width="@dimen/payment_save_card_label_width"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:singleLine="true"
                                        android:text="Mã thẻ"
                                        android:textColor="#292f33"
                                        android:textSize="@dimen/payment_save_card_text_size"
                                        android:textStyle="bold" />

                                    <View
                                        android:layout_width="1px"
                                        android:layout_height="match_parent"
                                        android:background="#d3d7e4" />

                                    <TextView
                                        android:id="@+id/card_serial_number"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:ellipsize="end"
                                        android:padding="5dp"
                                        android:singleLine="true"
                                        android:textColor="#292f33"
                                        android:textSize="@dimen/payment_save_card_text_size" />

                                    <View
                                        android:id="@+id/card_date_info_seperator"
                                        android:layout_width="1px"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="4dp"
                                        android:layout_marginTop="4dp"
                                        android:background="#d3d7e4"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/card_date_info"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:padding="5dp"
                                        android:singleLine="true"
                                        android:textColor="#292f33"
                                        android:textSize="12dp"
                                        android:visibility="gone" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="#d3d7e4" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:layout_width="@dimen/payment_save_card_label_width"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:singleLine="true"
                                        android:text="Tên chủ thẻ"
                                        android:textColor="#292f33"
                                        android:textSize="@dimen/payment_save_card_text_size"
                                        android:textStyle="bold" />

                                    <View
                                        android:layout_width="1px"
                                        android:layout_height="match_parent"
                                        android:background="#d3d7e4" />

                                    <TextView
                                        android:id="@+id/card_name"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:ellipsize="end"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:singleLine="true"
                                        android:textColor="#292f33"
                                        android:textSize="@dimen/payment_save_card_text_size" />

                                    <RelativeLayout
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content" >

                                        <TextView
                                            android:id="@+id/edit_card_manual"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:paddingRight="10dp"
                                            android:paddingTop="10dp"
                                            android:paddingBottom="10dp"
                                            android:text="Thay đổi"
                                            android:singleLine="true"
                                            android:textColor="#00A4E0"
                                            android:textSize="@dimen/payment_save_card_text_size" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/row1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/autofill_info"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal" >

                                <EditText
                                    android:id="@+id/chargeAmount_autofill"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/zalosdk_border06"
                                    android:hint="Nhập số tiền"
                                    android:imeOptions="actionNext|flagNoExtractUi"
                                    android:inputType="number"
                                    android:maxLength="20"
                                    android:padding="10dp"
                                    android:singleLine="true"
                                    android:textSize="@dimen/sdk_form_input_size" />

                                <EditText
                                    android:id="@+id/fill_4_last_digit_row1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/zalosdk_border06"
                                    android:hint="4 số cuối mã thẻ"
                                    android:imeOptions="actionDone|flagNoExtractUi"
                                    android:inputType="number"
                                    android:maxLength="4"
                                    android:padding="10dp"
                                    android:singleLine="true"
                                    android:textColor="#292f33"
                                    android:textSize="@dimen/sdk_form_input_size"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/row1"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal" >

                                <EditText
                                    android:id="@+id/card_password"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/fill_4_last_digit"
                                    android:layout_marginRight="4dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/zalosdk_border06"
                                    android:hint="Nhập mật khẩu"
                                    android:imeOptions="actionDone|flagNoExtractUi"
                                    android:inputType="textPassword"
                                    android:maxLength="20"
                                    android:padding="10dp"
                                    android:singleLine="true"
                                    android:textColor="#292f33"
                                    android:textSize="@dimen/sdk_form_input_size"
                                    android:visibility="gone" />

                                <EditText
                                    android:id="@+id/fill_4_last_digit"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/zalosdk_border06"
                                    android:hint="4 số cuối mã thẻ"
                                    android:imeOptions="actionDone|flagNoExtractUi"
                                    android:inputType="number"
                                    android:maxLength="4"
                                    android:padding="10dp"
                                    android:singleLine="true"
                                    android:textColor="#292f33"
                                    android:textSize="@dimen/sdk_form_input_size" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/normal_form_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible" >

                            <EditText
                                android:id="@+id/chargeAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/zalosdk_border06"
                                android:hint="Nhập số tiền"
                                android:imeOptions="actionNext|flagNoExtractUi"
                                android:inputType="number"
                                android:maxLength="20"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textSize="@dimen/sdk_form_input_size" />

                            <EditText
                                android:id="@+id/cardNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/chargeAmount"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/zalosdk_border06"
                                android:hint="Mã thẻ"
                                android:imeOptions="actionNext|flagNoExtractUi"
                                android:inputType="number"
                                android:maxLength="20"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textSize="@dimen/sdk_form_input_size" />

                            <ImageButton
                                android:id="@+id/take_photo"
                                android:layout_width="54dp"
                                android:layout_height="36dp"
                                android:layout_alignParentRight="true"
                                android:layout_below="@id/chargeAmount"
                                android:layout_marginTop="11dp"
                                android:background="@null"
                                android:padding="5dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/i_capture" />

                            <LinearLayout
                                android:id="@+id/row_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/cardNumber"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal" >

                                <EditText
                                    android:id="@+id/cardHolderName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/zalosdk_border06"
                                    android:hint="Tên chủ thẻ"
                                    android:imeOptions="actionNext|flagNoExtractUi"
                                    android:inputType="textCapCharacters"
                                    android:maxLength="50"
                                    android:padding="10dp"
                                    android:singleLine="true"
                                    android:textSize="@dimen/sdk_form_input_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/date_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@id/row_info"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:visibility="gone" >

                                <TextView
                                    android:id="@+id/zalosdk_card_date_lb_ctl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:gravity="center_vertical"
                                    android:textColor="#292f33" />

                                <EditText
                                    android:id="@+id/zalosdk_month_ctl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="2dp"
                                    android:background="@drawable/zalosdk_border06"
                                    android:ellipsize="start"
                                    android:gravity="center_horizontal"
                                    android:hint="Tháng"
                                    android:imeOptions="actionNext|flagNoExtractUi"
                                    android:inputType="number"
                                    android:maxLength="2"
                                    android:padding="10dp"
                                    android:singleLine="true"
                                    android:textSize="@dimen/sdk_form_input_size" />

                                <EditText
                                    android:id="@+id/zalosdk_year_ctl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:background="@drawable/zalosdk_border06"
                                    android:ellipsize="start"
                                    android:gravity="center_horizontal"
                                    android:hint="Năm"
                                    android:imeOptions="actionDone|flagNoExtractUi"
                                    android:inputType="number"
                                    android:maxLength="2"
                                    android:padding="10dp"
                                    android:singleLine="true"
                                    android:textSize="@dimen/sdk_form_input_size" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/card_password_ctl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/row_info"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/zalosdk_border06"
                                android:imeOptions="actionDone|flagNoExtractUi"
                                android:inputType="textPassword"
                                android:maxLength="50"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textSize="@dimen/sdk_form_input_size"
                                android:visibility="gone" />

                            <ToggleButton
                                android:id="@+id/zalosdk_ok_ctl"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dip"
                                android:background="@drawable/zalosdk_togglebutton_background"
                                android:paddingBottom="10dip"
                                android:paddingTop="10dip"
                                android:textColor="#fff"
                                android:textOff="@string/zalosdk_submit"
                                android:textOn="@string/zalosdk_submit"
                                android:textSize="20sp"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>

            <include
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/zalosdk_header"
                layout="@layout/zalosdk_button_submit_module" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/popup_atm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000"
        android:visibility="invisible" >

        <com.zing.zalo.zalosdk.payment.direct.DynamicPopupBankSelect
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#fff"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="Lựa chọn ngân hàng"
                android:textColor="#23A5C9"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9" />

            <HorizontalScrollView
                android:id="@+id/atm_listsv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#F3F3F3"
                android:fadingEdgeLength="100dp"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/atm_listctn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp" >
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/atm_select_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/zalosdk_border07"
                android:gravity="center"
                android:padding="10dp"
                android:text="Đồng ý"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />
        </com.zing.zalo.zalosdk.payment.direct.DynamicPopupBankSelect>
    </RelativeLayout>

</RelativeLayout>