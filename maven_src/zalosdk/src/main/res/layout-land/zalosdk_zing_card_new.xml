<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zalosdk_background_rectangle_corner_blue_background"
        android:orientation="vertical" >

        <include layout="@layout/payment_method_container" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/zalosdk_border_bottom_right" >

            <include
                android:id="@+id/zalosdk_header"
                layout="@layout/zalosdk_header" />

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/payment_group_button_submit_height"
                android:layout_toRightOf="@id/zalosdk_header"
                android:fillViewport="true"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/view_root"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="7dip" >

                        <EditText
                            android:id="@+id/cardCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/zalosdk_border06"
                            android:hint="Mã cào"
                            android:imeOptions="actionNext|flagNoExtractUi"
                            android:maxLength="20"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textSize="@dimen/sdk_form_input_size" />

                        <EditText
                            android:id="@+id/cardSerialNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cardCode"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/zalosdk_border06"
                            android:hint="Số seri thẻ"
                            android:imeOptions="actionDone|flagNoExtractUi"
                            android:maxLength="20"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textSize="@dimen/sdk_form_input_size" />

                        <ImageButton
                            android:id="@+id/take_photo"
                            android:layout_width="54dp"
                            android:layout_height="36dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:background="@null"
                            android:padding="5dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/i_capture" />

                        <ToggleButton
                            android:id="@+id/zalosdk_ok_ctl"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:background="@drawable/zalosdk_togglebutton_background"
                            android:paddingBottom="10dip"
                            android:paddingTop="10dip"
                            android:textColor="#fff"
                            android:textOff="@string/zalosdk_submit"
                            android:textOn="@string/zalosdk_submit"
                            android:textSize="20sp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>

            <include
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/zalosdk_header"
                layout="@layout/zalosdk_button_submit_module" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>